<odoo>
    <menuitem 
        id="finance_root_menu"
        name="Finance"
        sequence="1"
    />

    <record id="data_cheque_action" model="ir.actions.act_window">
        <field name="name">Saisie</field>
        <field name="res_model">datacheque</field>
    </record>

    <menuitem 
        id="data_cheque_menu"
        name="Saisie"
        parent="finance_root_menu"
        action="data_cheque_action"
    />

    <record id="datachq_view_tree" model="ir.ui.view">
        <field name="name">datachq tree</field>
        <field name="model">datacheque</field>
        <field name="arch" type="xml">
            <tree>
                <field name="perso_id"/>
                <field name="chq"/>
                <field name="date_emission"/>
                <field name="week"/>
                <field name="journal"/>
                <field name="date_echeance"/>
                <field name="date_encaissement"/>
                <field name="ste_id"/>
                <field name="benif_id"/>
                <field name="amount"/>
                <field name="facture_tag" widget="html" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="datachq_view_form" model="ir.ui.view">
        <field name="name">datachq form</field>
        <field name="model">datacheque</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="perso_id"/>
                        <field name="chq"/>
                        <field name="date_emission"/>
                        <field name="week"/>
                        <field name="journal"/>
                        <field name="date_echeance"/>
                        <field name="date_encaissement"/>
                        <field name="ste_id"/>
                        <field name="benif_id"/>
                        <field name="amount"/>
                        <field name="facture"/>
                        <field name="serie" attrs="{'invisible': [('facture', '!=', 'fact')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="datachq_view_search" model="ir.ui.view">
        <field name="name">datachq search</field>
        <field name="model">datacheque</field>
        <field name="arch" type="xml">
            <search>
                <field name="chq"/>
                <field name="week"/>
                <field name="facture"/>
            </search>
        </field>
    </record>

</odoo>
