<odoo>
    <menuitem 
        id="cal3iya_root_menu"
        name="9al3iya"
        sequence="1"
        groups="9al3iya.group_9al3iya_user"
    />

    <record id="cal3iyaentry_action" model="ir.actions.act_window">
        <field name="name">Entrée</field>
        <field name="res_model">cal3iyaentry</field>
    </record>

    <menuitem 
        id="entreev2_menu"
        name="Entrée"
        parent="cal3iya_root_menu"
        action="cal3iyaentry_action"
    />

    <record id="entreev2_view_tree" model="ir.ui.view">
        <field name="name">entree tree</field>
        <field name="model">cal3iyaentry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="price"/>
                <field name="total_price"/>
                <field name="date_entry"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="calibre" optional="1"/>
                <field name="driver_id"/>
                <field name="cellphone" optional="1"/>
                <field name="garage"/>
                <field name="charge_transport"/>
                <field name="ste_id" optional="1"/>
                <field name="provider_id" optional="1"/>
                <field name="client_id"/>
                <field name="state_badge" widget="html" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="entreev2_view_form" model="ir.ui.view">
        <field name="name">entree.form.improved</field>
        <field name="model">cal3iyaentry</field>
        <field name="arch" type="xml">
            <form string="Entrée de stock">

                <!-- Header -->
                <header>
                    <button name="action_open_dum_drive"
                            type="object"
                            string="Open DUM (Drive)"
                            class="btn-primary"
                            invisible="not dum"/>
                    <field name="state"
                        widget="statusbar"
                        options="{'clickable': true}"/>
                </header>

                <sheet>

                    <!-- Titre -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- Retour -->
                    <group>
                        <field name="return_id"
                            invisible="state == 'entree'"
                            domain="[('client_id', '=', client_id)]"/>
                    </group>

                    <!-- Informations principales -->
                    <group col="2">

                        <group string="Informations générales">
                            <field name="client_id" invisible="state == 'entree'"/>
                            <field name="date_entry"/>
                            <field name="driver_id"/>
                            <field name="cellphone"/>
                        </group>

                        <group string="Quantités & Prix">
                            <field name="quantity"/>
                            <field name="weight"/>
                            <field name="tonnage"/>
                            <field name="price" invisible="state == 'retour'"/>
                            <field name="total_price" invisible="state == 'retour'"/>
                            <field name="selling_price" invisible="state == 'entree'"/>
                        </group>

                    </group>

                    <!-- Identification produit -->
                    <group string="Identification produit" col="2">
                        <group>
                            <field name="dum"/>
                            <field name="lot"/>
                            <field name="calibre"/>
                        </group>
                        <group>
                            <field name="garage"/>
                            <field name="provider_id"/>
                            <field name="ste_id"/>
                        </group>
                    </group>

                    <!-- Transport -->
                    <group string="Transport">
                        <field name="charge_transport"/>
                    </group>

                    <!-- Documents -->
                    <group string="Documents" col="2">
                        <group>
                            <field name="dum_link"
                                widget="url"
                                string="PDF DUM"/>
                        </group>
                        <group>
                            <field name="image_1920"
                                widget="image"
                                class="oe_avatar"
                                options="{'preview_image': 'image_1920'}"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="entreev2_view_search" model="ir.ui.view">
        <field name="name">entree search</field>
        <field name="model">cal3iyaentry</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="state"/>
            </search>
        </field>
    </record>

</odoo>
