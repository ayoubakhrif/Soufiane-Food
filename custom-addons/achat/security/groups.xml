<odoo>
    <record id="module_category_achat" model="ir.module.category">
        <field name="name">Achat</field>
        <field name="description">Niveaux d'acc√®s pour le module Achat</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_achat_user" model="res.groups">
        <field name="name">Utilisateur Achat</field>
        <field name="category_id" ref="module_category_achat"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_achat_manager" model="res.groups">
        <field name="name">Manager Achat</field>
        <field name="category_id" ref="module_category_achat"/>
        <field name="implied_ids" eval="[(4, ref('group_achat_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
