<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_achat_category" model="ir.module.category">
        <field name="name">Achat</field>
        <field name="description">Gestion des acc√®s pour le module Achat</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_purchase_user" model="res.groups">
        <field name="name">Acheteur</field>
        <field name="category_id" ref="module_achat_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_purchase_manager" model="res.groups">
        <field name="name">Responsable Achat</field>
        <field name="category_id" ref="module_achat_category"/>
        <field name="implied_ids" eval="[(4, ref('group_purchase_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_purchase_admin" model="res.groups">
        <field name="name">Administrateur Achat</field>
        <field name="category_id" ref="module_achat_category"/>
        <field name="implied_ids" eval="[(4, ref('group_purchase_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    
    <record id="group_purchase_viewer" model="res.groups">
        <field name="name">Viewer Achat</field>
        <field name="category_id" ref="module_achat_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
