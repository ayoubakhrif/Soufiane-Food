<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_achat_article_form" model="ir.ui.view">
        <field name="name">achat.article.form</field>
        <field name="model">achat.article</field>
        <field name="arch" type="xml">
            <form string="Article Achat">
                <sheet>
                    <group col="2">

                        <!-- IMAGE AUTO -->
                        <field name="company_article_image"
                            widget="image"
                            class="oe_avatar"/>

                        <group>
                            <!-- SELECT FROM COMPANY DATA -->
                            <field name="company_article_id"
                                options="{'no_create': True}"
                                placeholder="Choisir un article société"/>

                            <!-- ACHAT INTERNAL NAME -->
                            <field name="name"
                                placeholder="Nom interne utilisé par Achat"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_achat_article_tree" model="ir.ui.view">
        <field name="name">achat.article.tree</field>
        <field name="model">achat.article</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_article_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_achat_article" model="ir.actions.act_window">
        <field name="name">Articles</field>
        <field name="res_model">achat.article</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new article
            </p>
        </field>
    </record>
</odoo>