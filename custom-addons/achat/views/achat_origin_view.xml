<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="view_achat_origin_tree" model="ir.ui.view">
        <field name="name">achat.origin.tree</field>
        <field name="model">achat.origin</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_achat_origin_form" model="ir.ui.view">
        <field name="name">achat.origin.form</field>
        <field name="model">achat.origin</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" placeholder="Additional notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_achat_origin" model="ir.actions.act_window">
        <field name="name">Origins</field>
        <field name="res_model">achat.origin</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
