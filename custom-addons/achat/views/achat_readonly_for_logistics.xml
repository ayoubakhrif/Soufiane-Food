<odoo>
    <!-- VIEW FOR LOGISTICS USERS: Make Achat fields readonly -->
    <!-- This view uses the 'groups' attribute on xpath elements to apply only to Logistics users -->
    <!-- Achat users will not see these modifications -->
    <record id="view_entry_form_logistics_readonly" model="ir.ui.view">
        <field name="name">logistique.entry.form.logistics.readonly</field>
        <field name="model">logistique.entry</field>
        <field name="inherit_id" ref="logistique.view_logistique_entry_form"/>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            
            <!-- ACHAT FIELDS: Make readonly ONLY for Logistics users -->
            <!-- Using groups attribute to restrict these modifications to Logistics group only -->
            <xpath expr="//field[@name='eta']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='week']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_number']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='ste_id']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='supplier_id']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='shipping_id']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='article_id']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='details']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='weight']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='price_unit']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='incoterm']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='free_time']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='doc_status']" position="attributes" groups="logistique.group_logistique_user,logistique.group_logistique_manager">
                 <attribute name="readonly">1</attribute>
            </xpath>

        </field>
    </record>

</odoo>
