<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_achat_reclamation_dhl_form" model="ir.ui.view">
        <field name="name">achat.reclamation.dhl.form</field>
        <field name="model">achat.reclamation.dhl</field>
        <field name="arch" type="xml">
            <form string="Réclamation DHL">
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirmer"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object"
                            string="Annuler"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <field name="dossier_id" options="{'no_create': True}"/>
                        <field name="bl_number"/>
                    </group>

                    <group string="Informations dossier">
                        <field name="ste_id"/>
                        <field name="supplier_id"/>
                        <field name="eta"/>
                    </group>

                    <group string="Réclamation DHL">
                        <field name="dhl_number"/>
                        <field name="eta_dhl"/>
                        <field name="reason"/>
                        <field name="note"/>
                    </group>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_achat_reclamation_dhl_tree" model="ir.ui.view">
        <field name="name">achat.reclamation.dhl.tree</field>
        <field name="model">achat.reclamation.dhl</field>
        <field name="arch" type="xml">
            <tree string="Réclamations DHL" decoration-info="state == 'draft'" decoration-muted="state == 'cancelled'">
                <field name="bl_number"/>
                <field name="dhl_number"/>
                <field name="eta_dhl"/>
                <field name="state"/>
                <field name="supplier_id" optional="show"/>
                <field name="ste_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="action_achat_reclamation_dhl" model="ir.actions.act_window">
        <field name="name">Réclamations DHL</field>
        <field name="res_model">achat.reclamation.dhl</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle réclamation DHL
            </p>
        </field>
    </record>
</odoo>