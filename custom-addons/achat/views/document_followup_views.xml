<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_achat_document_followup_search" model="ir.ui.view">
        <field name="name">achat.document.followup.search</field>
        <field name="model">achat.document.followup</field>
        <field name="arch" type="xml">
            <search>
                <field name="bl_id"/>
                <field name="supplier_id"/>
                <field name="document_type"/>
                <filter string="Initial" name="state_initial" domain="[('state', '=', 'initial')]"/>
                <filter string="Sent to Supplier" name="state_sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Confirmed" name="state_confirmed" domain="[('state', '=', 'confirmed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_achat_document_followup_tree" model="ir.ui.view">
        <field name="name">achat.document.followup.tree</field>
        <field name="model">achat.document.followup</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'initial'" decoration-warning="state == 'sent'" decoration-success="state == 'confirmed'">
                <field name="bl_id"/>
                <field name="supplier_id"/>
                <field name="invoice_number"/>
                <field name="document_type"/>
                <field name="date_sent"/>
                <field name="date_confirmed"/>
                <field name="state" widget="badge" decoration-info="state == 'initial'" decoration-warning="state == 'sent'" decoration-success="state == 'confirmed'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_achat_document_followup_form" model="ir.ui.view">
        <field name="name">achat.document.followup.form</field>
        <field name="model">achat.document.followup</field>
        <field name="arch" type="xml">
            <form string="Suivi Document">
                <header>
                    <button name="action_send" string="Send to Supplier" type="object" class="oe_highlight" invisible="state != 'initial'" groups="achat.group_purchase_manager"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'sent'" groups="achat.group_purchase_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="initial,sent,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="bl_id" options="{'no_create': True, 'no_open': True}" readonly="state != 'initial'"/>
                        </h1>
                    </div>
                    <group>
                        <group string="BL Info">
                            <field name="supplier_id"/>
                            <field name="company_id"/>
                            <field name="invoice_number"/>
                        </group>
                        <group string="Tracking Dates">
                            <field name="create_date" readonly="1" string="Date de Création"/>
                            <field name="date_sent" required="state == 'sent'" readonly="state != 'initial'"/>
                            <field name="date_confirmed"/>
                        </group>
                    </group>
                    <group string="Document Details">
                        <field name="document_type" readonly="state != 'initial'"/>
                        <field name="comment" readonly="state == 'confirmed'"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_achat_document_followup" model="ir.actions.act_window">
        <field name="name">Suivi Documents</field>
        <field name="res_model">achat.document.followup</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau suivi de document
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_achat_document_followup"
              name="Suivi Documents"
              parent="menu_achat_root" 
              action="action_achat_document_followup"
              sequence="20"/>
</odoo>
