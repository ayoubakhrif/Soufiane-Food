<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PURCHASE TREE VIEW -->
    <record id="view_purchase_entry_tree" model="ir.ui.view">
        <field name="name">purchase.entry.tree</field>
        <field name="model">logistique.entry</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Dossiers Achat">
                <field name="bl_number"/>
                <field name="ste_id"/>
                <field name="supplier_id"/>
                <field name="article_id"/>
                <field name="eta"/>
                <field name="purchase_state" widget="badge" decoration-info="purchase_state == 'initial'" decoration-success="purchase_state == 'confirmed'" decoration-muted="purchase_state == 'closed'"/>
            </tree>
        </field>
    </record>

    <!-- PURCHASE FORM VIEW -->
    <record id="view_purchase_entry_form" model="ir.ui.view">
        <field name="name">purchase.entry.form</field>
        <field name="model">logistique.entry</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Dossier Achat">
                <header>
                    <button name="action_move_to_draft" string="Move to Draft" type="object" class="oe_highlight" invisible="purchase_state != 'initial'"/>
                    <button name="action_confirm_purchase" string="Confirm" type="object" class="oe_highlight" invisible="purchase_state != 'draft'"/>
                    <field name="purchase_state" widget="statusbar" statusbar_visible="initial,draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="bl_number" string="BL Number" class="oe_edit_only"/>
                        <label for="contract_num" placeholder="Contract No." readonly="1" class="oe_inline"/>
                        <h1>
                            <div class="o_row">
                                <span invisible="not contract_num"> / </span>
                                <field name="bl_number" placeholder="BL Number" readonly="purchase_state != 'initial'" class="oe_inline"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations Générales">
                            <field name="purchase_state" invisible="1"/>
                            <field name="eta" readonly="purchase_state != 'initial'"/>
                            <field name="contract_id" options="{'no_create': True}" domain="[('state', '=', 'open')]" readonly="purchase_state != 'initial'"/> 
                            
                            <field name="ste_id" readonly="purchase_state != 'initial'"/>
                            <field name="supplier_id" readonly="purchase_state != 'initial'"/>
                            <field name="shipping_id" readonly="purchase_state != 'initial'"/>
                            <field name="origin" readonly="purchase_state != 'initial'"/>
                            <field name="incoterm" readonly="purchase_state != 'initial'"/>
                        </group>
                        <group string="Détails Marchandise">
                            <field name="article_id" readonly="purchase_state != 'initial'"/>
                            <field name="details" readonly="purchase_state != 'initial'"/>
                            
                            <field name="lot" readonly="purchase_state != 'initial'"/>
                            <field name="invoice_number" readonly="purchase_state != 'initial'"/>
                            <field name="weight" readonly="purchase_state != 'initial'"/>
                            <field name="price_unit" readonly="purchase_state != 'initial'"/>
                            <field name="amount_total" readonly="purchase_state != 'initial'"/>
                            
                            <label for="free_time" string="Free Time (Nego / Conf)" invisible="incoterm == 'emirate'"/>
                            <div class="o_row" invisible="incoterm == 'emirate'">
                                <field name="free_time_negotiated" readonly="1" force_save="1" class="oe_inline"/> / 
                                <field name="free_time" required="incoterm in ['fob', 'cfr']" readonly="purchase_state != 'initial'" class="oe_inline"/>
                            </div>

                            <field name="dhl_number" readonly="purchase_state != 'initial'"/>
                            <field name="eta_dhl" readonly="purchase_state != 'initial'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Documents" name="documents">
                            <group>
                                <group>
                                    <field name="doc_invoice" widget="radio" options="{'horizontal': true}" readonly="purchase_state == 'confirmed'"/>
                                    <field name="doc_packing" widget="radio" options="{'horizontal': true}" readonly="purchase_state == 'confirmed'"/>
                                    <field name="doc_bl" widget="radio" options="{'horizontal': true}" readonly="purchase_state == 'confirmed'"/>
                                </group>
                                <group>
                                    <field name="doc_quality" widget="radio" options="{'horizontal': true}" readonly="purchase_state == 'confirmed'"/>
                                    <field name="doc_origin" widget="radio" options="{'horizontal': true}" readonly="purchase_state == 'confirmed'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Conteneurs" name="containers">
                            <field name="container_ids" readonly="purchase_state != 'initial'">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Attached Files" name="attached_files">
                            <group>
                                <field name="attachment_ids" widget="many2many_binary" string="Upload Documents" nolabel="1" readonly="purchase_state == 'confirmed'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ACTION PURCHASE -->
    <record id="action_purchase_entry" model="ir.actions.act_window">
        <field name="name">Dossiers Achat</field>
        <field name="res_model">logistique.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_purchase_entry_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_purchase_entry_form')})]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>
