<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PURCHASE TREE VIEW -->
    <record id="view_purchase_entry_tree" model="ir.ui.view">
        <field name="name">purchase.entry.tree</field>
        <field name="model">logistique.entry</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Dossiers Achat">
                <field name="week"/>
                <field name="bl_number"/>
                <field name="ste_id"/>
                <field name="supplier_id"/>
                <field name="article_id"/>
                <field name="eta"/>
                <field name="status" widget="badge" decoration-info="status == 'in_progress'" decoration-success="status == 'closed'"/>
            </tree>
        </field>
    </record>

    <!-- PURCHASE FORM VIEW -->
    <record id="view_purchase_entry_form" model="ir.ui.view">
        <field name="name">purchase.entry.form</field>
        <field name="model">logistique.entry</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Dossier Achat">
                <header>
                    <field name="status" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="bl_number" class="oe_edit_only"/>
                        <h1>
                            <field name="bl_number" placeholder="Ex: BL-123456"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations Générales">

                            <field name="eta"/>
                            <field name="ste_id"/>
                            <field name="supplier_id"/>
                            <field name="shipping_id"/>
                            <field name="origin"/> <!-- New Field -->
                            <field name="incoterm"/>
                        </group>
                        <group string="Détails Marchandise">
                            <field name="article_id"/>
                            <field name="lot"/> <!-- New Field -->
                            <field name="details"/>
                            <field name="invoice_number"/>
                            <field name="weight"/>
                            <field name="price_unit"/>
                            <field name="amount_total"/>
                            <field name="free_time"/>
                            <field name="dhl_number"/> <!-- Replaces doc_status -->
                            <field name="eta_dhl"/> <!-- New Field -->
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Conteneurs" name="containers">
                            <field name="container_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION PURCHASE -->
    <record id="action_purchase_entry" model="ir.actions.act_window">
        <field name="name">Dossiers Achat</field>
        <field name="res_model">logistique.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_purchase_entry_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_purchase_entry_form')})]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>
