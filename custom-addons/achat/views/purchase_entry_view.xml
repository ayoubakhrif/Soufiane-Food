<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PURCHASE TREE VIEW -->
    <record id="view_purchase_entry_tree" model="ir.ui.view">
        <field name="name">purchase.entry.tree</field>
        <field name="model">logistique.entry</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Dossiers Achat">
                <field name="bl_number"/>
                <field name="ste_id"/>
                <field name="supplier_id"/>
                <field name="article_id"/>
                <field name="eta"/>
                <field name="purchase_state " widget="badge" decoration-info="purchase_state == 'initial'" decoration-success="purchase_state == 'confirmed'"/>
            </tree>
        </field>
    </record>

    <!-- PURCHASE FORM VIEW -->
    <record id="view_purchase_entry_form" model="ir.ui.view">
        <field name="name">purchase.entry.form</field>
        <field name="model">logistique.entry</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Dossier Achat">
                <header>
                    <button name="action_move_to_draft" string="Move to Draft" type="object" class="oe_highlight" invisible="purchase_state != 'initial'"/>
                    <button name="action_confirm_purchase" string="Confirm" type="object" class="oe_highlight" invisible="purchase_state != 'draft'"/>
                    <field name="purchase_state" widget="statusbar" statusbar_visible="initial,draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="bl_number" class="oe_edit_only"/>
                        <h1>
                            <field name="bl_number" placeholder="Ex: BL-123456"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informations Générales">
                            <field name="purchase_state" invisible="1"/>
                            <field name="eta"/>
                            <field name="contract_id" options="{'no_create': True}"/> 
                            <!-- contract_num is auto-filled but kept for display/search -->
                            <field name="contract_num" invisible="1"/> 
                            
                            <field name="ste_id"/>
                            <field name="supplier_id"/>
                            <!-- Show shipping/origin only if NOT initial (or always? Request said Initial=Minimal) -->
                            <field name="shipping_id" invisible="purchase_state == 'initial'"/>
                            <field name="origin" invisible="purchase_state == 'initial'"/>
                            <field name="incoterm"/>
                        </group>
                        <group string="Détails Marchandise">
                            <field name="article_id"/>
                            <field name="details"/>
                            
                            <!-- Hidden in Initial -->
                            <field name="lot" invisible="purchase_state == 'initial'"/>
                            <field name="invoice_number" invisible="purchase_state == 'initial'"/>
                            <field name="weight" invisible="purchase_state == 'initial'"/>
                            <field name="price_unit" invisible="purchase_state == 'initial'"/>
                            <field name="amount_total" invisible="purchase_state == 'initial'"/>
                            
                            <label for="free_time" string="Free Time (Nego / Conf)" invisible="incoterm == 'emirate' or purchase_state == 'initial'"/>
                            <div class="o_row" invisible="incoterm == 'emirate' or purchase_state == 'initial'">
                                <field name="free_time_negotiated" readonly="1" force_save="1" class="oe_inline"/> / 
                                <field name="free_time" required="incoterm in ['fob', 'cfr']" class="oe_inline"/>
                            </div>

                            <field name="dhl_number" invisible="purchase_state == 'initial'"/>
                            <field name="eta_dhl" invisible="purchase_state == 'initial'"/>
                        </group>
                    </group>
                    
                    <notebook invisible="purchase_state == 'initial'">
                        <page string="Documents" name="documents">
                            <group>
                                <group>
                                    <field name="doc_invoice" widget="radio" options="{'horizontal': true}"/>
                                    <field name="doc_packing" widget="radio" options="{'horizontal': true}"/>
                                    <field name="doc_bl" widget="radio" options="{'horizontal': true}"/>
                                </group>
                                <group>
                                    <field name="doc_quality" widget="radio" options="{'horizontal': true}"/>
                                    <field name="doc_origin" widget="radio" options="{'horizontal': true}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Conteneurs" name="containers">
                            <field name="container_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION PURCHASE -->
    <record id="action_purchase_entry" model="ir.actions.act_window">
        <field name="name">Dossiers Achat</field>
        <field name="res_model">logistique.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_purchase_entry_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_purchase_entry_form')})]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>
