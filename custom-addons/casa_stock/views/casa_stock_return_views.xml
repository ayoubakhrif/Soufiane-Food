<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_casa_stock_return_tree" model="ir.ui.view">
        <field name="name">casa.stock.return.tree</field>
        <field name="model">casa.stock.return</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'">
                <field name="date"/>
                <field name="name"/>
                <field name="create_uid" string="Créé par" widget="many2one_avatar_user" optional="show"/>
                <field name="exit_id"/>
                <field name="product_id"/>
                <field name="client_id"/>
                <field name="qty"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="frigo"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_casa_stock_return_form" model="ir.ui.view">
        <field name="name">casa.stock.return.form</field>
        <field name="model">casa.stock.return</field>
        <field name="arch" type="xml">
            <form string="Retour Stock Casa">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Annuler" type="object" class="btn-danger" invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h3>
                            <field name="create_uid" string="Créé par" widget="many2one_avatar_user" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group string="A remplir">
                            <field name="qty" readonly="state != 'draft'"/>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="driver_id" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="exit_id" readonly="state != 'draft'" options="{'no_create': True}"/>
                            <field name="ste_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="client_id"/>
                        </group>
                    </group>
                    <group string="Traçabilité">
                        <group>
                            <field name="lot"/>
                            <field name="dum"/>
                            <field name="frigo"/>
                            <field name="calibre"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter" groups="casa_stock.group_manager">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="view_casa_stock_return_search" model="ir.ui.view">
        <field name="name">casa.stock.return.search</field>
        <field name="model">casa.stock.return</field>
        <field name="arch" type="xml">
            <search string="Recherche Retours">
                <field name="name"/>
                <field name="product_id"/>
                <field name="client_id"/>
                <field name="exit_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois" name="this_month" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Produit" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_casa_stock_return" model="ir.actions.act_window">
        <field name="name">Retours Clients</field>
        <field name="res_model">casa.stock.return</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': True}</field>
    </record>

    <menuitem
        id="menu_casa_stock_return"
        name="Retours Clients"
        parent="menu_casa_stock_root"
        action="action_casa_stock_return"
        sequence="35"
    />
</odoo>
