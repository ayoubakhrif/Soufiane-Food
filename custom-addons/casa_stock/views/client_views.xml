<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_casa_client_form" model="ir.ui.view">
        <field name="name">casa.client.form</field>
        <field name="model">casa.client</field>
        <field name="arch" type="xml">
            <form string="Client Casa">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Stat Buttons can go here later -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du Client"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="compte_initial"/>
                            <field name="compte" class="oe_inline" decoration-bf="1" style="font-size:1.5em;"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- 1. Commandes (HTML Dashboard) -->
                        <page string="Commandes (Tableau de bord)" name="dashboard_sales">
                            <field name="sorties_grouped_html"/>
                            <field name="sale_ids" invisible="1"/> <!-- Needed for compute dependency -->
                        </page>

                        <!-- 2. Retours (HTML Dashboard) -->
                        <page string="Retours (Tableau de bord)" name="dashboard_returns">
                            <field name="retours_grouped_html"/>
                            <field name="return_ids" invisible="1"/>
                        </page>

                        <!-- 3. Détail Ventes (Grid) -->
                        <page string="Détail Ventes (Grille)" name="sales_grid">
                             <field name="sale_ids" context="{'default_client_id': active_id}">
                                <tree editable="bottom" decoration-info="selling_price_final != 0.0" create="false" delete="false">
                                    <field name="date"/>
                                    <field name="week"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="quantity" readonly="1"/>
                                    <field name="weight" readonly="1"/>
                                    <field name="tonnage" readonly="1"/>
                                    <field name="selling_price" readonly="1"/>
                                    <field name="selling_price_final" decoration-bf="1"/>
                                    <field name="mt_vente_final" sum="Total"/>
                                    <button name="open_record" type="object" icon="fa-external-link" string="Ouvrir"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- 4. Avances -->
                        <page string="Avances" name="advances">
                            <field name="advance_ids" context="{'default_client_id': active_id}">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>

                        <!-- 5. Impayés -->
                        <page string="Impayés" name="unpaid">
                            <field name="unpaid_ids" context="{'default_client_id': active_id}">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>

                        <!-- 6. Sorties Supp -->
                        <page string="Sorties Supp" name="sale_supp">
                            <field name="sale_supp_ids" context="{'default_client_id': active_id}">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update Action to use specific views if needed, but default is fine for now -->
</odoo>
