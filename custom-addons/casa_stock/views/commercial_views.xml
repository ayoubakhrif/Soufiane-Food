<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- =========================== -->
    # Vente Commerciale (Casa Sale)
    <!-- =========================== -->
    <record id="view_casa_sale_tree" model="ir.ui.view">
        <field name="name">casa.sale.tree</field>
        <field name="model">casa.sale</field>
        <field name="arch" type="xml">
            <tree string="Ventes Commerciales" decoration-info="selling_price_final != 0.0">
                <field name="date"/>
                <field name="week"/>
                <field name="client_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="selling_price" string="Prix Init"/>
                <field name="selling_price_final" string="Prix Final" decoration-bf="1"/>
                <field name="mt_vente_final" sum="Total Ventes"/>
                <field name="ville" optional="hide"/>
                <field name="frigo" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_casa_sale_form" model="ir.ui.view">
        <field name="name">casa.sale.form</field>
        <field name="model">casa.sale</field>
        <field name="arch" type="xml">
            <form string="Vente Commerciale">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Infos Client &amp; Stock">
                            <field name="client_id" readonly="1"/>
                            <field name="stock_exit_id" readonly="1"/>
                            <field name="lot" readonly="1"/>
                            <field name="dum" readonly="1"/>
                            <field name="ville" readonly="1"/>
                            <field name="frigo" readonly="1"/>
                        </group>
                        <group string="Données Financières">
                            <label for="selling_price_final" string="Prix de Vente"/>
                            <div class="o_row">
                                <field name="selling_price" readonly="1" class="oe_inline" style="color:grey;"/>
                                <i class="fa fa-arrow-right oe_edit_only" style="margin:0 10px;"/>
                                <field name="selling_price_final" class="oe_inline" placeholder="Prix corrigé..."/>
                            </div>
                            
                            <label for="tonnage_final" string="Tonnage"/>
                            <div class="o_row">
                                <field name="tonnage" readonly="1" class="oe_inline" style="color:grey;"/>
                                <i class="fa fa-arrow-right oe_edit_only" style="margin:0 10px;"/>
                                <field name="tonnage_final" class="oe_inline" placeholder="Tonnage corrigé..."/>
                            </div>

                            <label for="mt_vente_final" string="Montant Total"/>
                            <div class="o_row">
                                <field name="mt_vente" readonly="1" class="oe_inline" style="color:grey;"/>
                                <i class="fa fa-arrow-right oe_edit_only" style="margin:0 10px;"/>
                                <field name="mt_vente_final" class="oe_inline" style="font-weight:bold; font-size:1.2em;"/>
                            </div>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- =========================== -->
    # Retour Commercial (Casa Sale Return)
    <!-- =========================== -->
    <record id="view_casa_sale_return_tree" model="ir.ui.view">
        <field name="name">casa.sale.return.tree</field>
        <field name="model">casa.sale.return</field>
        <field name="arch" type="xml">
            <tree string="Retours Commerciaux" editable="bottom">
                <field name="date"/>
                <field name="week"/>
                <field name="client_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="price_unit"/>
                <field name="amount" sum="Total Retours"/>
            </tree>
        </field>
    </record>

    <!-- =========================== -->
    # Avance (Casa Advance)
    <!-- =========================== -->
    <record id="view_casa_advance_tree" model="ir.ui.view">
        <field name="name">casa.advance.tree</field>
        <field name="model">casa.advance</field>
        <field name="arch" type="xml">
            <tree string="Avances" editable="bottom">
                <field name="date"/>
                <field name="client_id"/>
                <field name="amount" sum="Total Avances"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- =========================== -->
    # Impayé (Casa Unpaid)
    <!-- =========================== -->
    <record id="view_casa_unpaid_tree" model="ir.ui.view">
        <field name="name">casa.unpaid.tree</field>
        <field name="model">casa.unpaid</field>
        <field name="arch" type="xml">
            <tree string="Impayés" editable="bottom">
                <field name="date"/>
                <field name="client_id"/>
                <field name="amount" sum="Total Impayés"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- =========================== -->
    # Sortie Supp (Casa Sale Supp)
    <!-- =========================== -->
    <record id="view_casa_sale_supp_tree" model="ir.ui.view">
        <field name="name">casa.sale.supp.tree</field>
        <field name="model">casa.sale.supp</field>
        <field name="arch" type="xml">
            <tree string="Sorties Supp" editable="bottom">
                <field name="date"/>
                <field name="client_id"/>
                <field name="amount" sum="Total Supp"/>
                <field name="note"/>
            </tree>
        </field>
    </record>
</odoo>
