<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================= -->
    <!-- üìã FORM VIEW : Casa Client -->
    <!-- ========================= -->
    <record id="view_casa_client_form" model="ir.ui.view">
        <field name="name">casa.client.form</field>
        <field name="model">casa.client</field>
        <field name="arch" type="xml">
            <form string="Client Casa">
                <header>
                    <!-- üîò Smart Button : Sorties -->
                    <button name="action_view_exits"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-sign-out">
                        <field name="exit_count"
                               widget="statinfo"
                               string="Nombre des commandes"/>
                    </button>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informations Client">
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- üå≥ TREE VIEW : Casa Client -->
    <!-- ========================= -->
    <record id="view_casa_client_tree" model="ir.ui.view">
        <field name="name">casa.client.tree</field>
        <field name="model">casa.client</field>
        <field name="arch" type="xml">
            <tree string="Clients Casa">
                <field name="name"/>
                <field name="exit_count" string="Nombre de commandes"/>
            </tree>
        </field>
    </record>

    <!-- ========================= -->
    <!-- üöÄ ACTION -->
    <!-- ========================= -->
    <record id="action_casa_stock_client" model="ir.actions.act_window">
        <field name="name">Clients Casa</field>
        <field name="res_model">casa.client</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©ez votre premier client.
            </p>
        </field>
    </record>
</odoo>
