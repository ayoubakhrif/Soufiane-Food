<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================= -->
    <!-- üìã FORM VIEW : Casa Client -->
    <!-- ========================= -->
    <record id="filtered_exit_action" model="ir.actions.act_window">
        <field name="name">Sorties du client</field>
        <field name="res_model">casa.stock.exit</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('client_id', '=', active_id), ('state', '!=', 'cancel')]</field>
    </record>
    
    <record id="view_casa_client_form" model="ir.ui.view">
        <field name="name">casa.client.form</field>
        <field name="model">casa.client</field>
        <field name="arch" type="xml">
            <form string="Client Casa">
                <sheet>

                    <!-- ‚úÖ SMART BUTTON EN HAUT √Ä DROITE -->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(filtered_exit_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-truck">
                            <field name="exit_count" 
                                   widget="statinfo" 
                                   string="Commandes"/>
                        </button>
                    </div>

                    <!-- TITRE -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du client..."/>
                        </h1>
                    </div>

                    <!-- INFORMATIONS SIMPLES -->
                    <group>
                        <group string="Informations Client">
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- üå≥ TREE VIEW : Casa Client -->
    <!-- ========================= -->
    <record id="view_casa_client_tree" model="ir.ui.view">
        <field name="name">casa.client.tree</field>
        <field name="model">casa.client</field>
        <field name="arch" type="xml">
            <tree string="Clients Casa">
                <field name="name"/>
                <field name="exit_count" string="Nb. Commandes"/>
            </tree>
        </field>
    </record>

    <!-- ========================= -->
    <!-- üîç SEARCH VIEW -->
    <!-- ========================= -->
    <record id="view_casa_client_search" model="ir.ui.view">
        <field name="name">casa.client.search</field>
        <field name="model">casa.client</field>
        <field name="arch" type="xml">
            <search string="Rechercher Client">
                <field name="name" 
                       string="Client" 
                       filter_domain="[('name','ilike',self)]"/>
                
                <separator/>
                
                <filter string="Avec commandes" 
                        name="with_orders" 
                        domain="[('exit_count','>',0)]"/>
                
                <filter string="Sans commandes" 
                        name="without_orders" 
                        domain="[('exit_count','=',0)]"/>
            </search>
        </field>
    </record>

    <!-- ========================= -->
    <!-- üöÄ ACTION -->
    <!-- ========================= -->
    <record id="action_casa_stock_client" model="ir.actions.act_window">
        <field name="name">Clients Casa</field>
        <field name="res_model">casa.client</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©ez votre premier client Casa
            </p>
            <p>
                Les clients sont li√©s aux sorties de stock.
            </p>
        </field>
    </record>

    <!-- ========================= -->
    <!-- üìÅ MENU ITEM -->
    <!-- ========================= -->


</odoo>