<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_casa_stock_exit_tree" model="ir.ui.view">
        <field name="name">casa.stock.exit.tree</field>
        <field name="model">casa.stock.exit</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'">
                <field name="date"/>
                <field name="name"/>
                <field name="product_id"/>
                <field name="qty"/>
                <field name="client_id"/>
                <field name="price_sale"/>
                <field name="ville"/>
                <field name="frigo"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_casa_stock_exit_form" model="ir.ui.view">
        <field name="name">casa.stock.exit.form</field>
        <field name="model">casa.stock.exit</field>
        <field name="arch" type="xml">
            <form string="Sortie Stock Casa">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Annuler (Reversal)" type="object" class="btn-danger" invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <separator string="Détails Sortie"/>
                    <group>
                        <group string="Selection Stock">
                            <field name="product_id" options="{'no_create_edit': True}"/>
                            <field name="lot"/>
                            <field name="dum"/>
                            <field name="ville"/>
                            <field name="frigo"/>
                        </group>
                        <group string="Quantités &amp; Prix">
                            <field name="qty"/>
                            <field name="weight"/>
                            <field name="tonnage"/>
                            <field name="price_sale"/>
                            <field name="date"/>
                        </group>
                    </group>

                    <separator string="Informations Complémentaires"/>
                    <group>
                        <group>
                            <field name="client_id" options="{'no_create_edit': True}"/>
                            <field name="driver_id" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="calibre"/>
                        </group>
                    </group>

                    <separator string="Mouvements Liés"/>
                    <group>
                        <field name="move_id"/>
                        <field name="cancel_move_id" invisible="not cancel_move_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_casa_stock_exit" model="ir.actions.act_window">
        <field name="name">Sorties Stock Casa</field>
        <field name="res_model">casa.stock.exit</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
