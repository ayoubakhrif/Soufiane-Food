<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action -->
    <record id="action_report_claims_dhl_delay" model="ir.actions.report">
        <field name="name">DHL Claim</field>
        <field name="model">claims.dhl.delay</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">claims.report_claims_dhl_delay</field>
        <field name="report_file">claims.report_claims_dhl_delay</field>
        <field name="print_report_name">'DHL_Claim_%s' % object.bl_id.bl_number</field>
        <field name="binding_model_id" ref="model_claims_dhl_delay"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_claims_franchise_difference" model="ir.actions.report">
        <field name="name">Franchise Claim</field>
        <field name="model">claims.franchise.difference</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">claims.report_claims_franchise_difference</field>
        <field name="report_file">claims.report_claims_franchise_difference</field>
        <field name="print_report_name">'Franchise_Claim_%s' % object.bl_id.bl_number</field>
        <field name="binding_model_id" ref="model_claims_franchise_difference"/>
        <field name="binding_type">report</field>
    </record>

    <!-- DHL Delay Template -->
    <template id="report_claims_dhl_delay">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="company" t-value="env.company"/>
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header -->
                        <div class="row mb-5">
                            <div class="col-6">
                                <img t-if="o.bl_id.ste_id.core_ste_id.image_1920" 
                                     t-att-src="image_data_uri(o.bl_id.ste_id.core_ste_id.image_1920)" 
                                     style="max-height: 100px; max-width: 200px;" alt="Logo"/>
                            </div>
                            <div class="col-6 text-right">
                                <h3 style="color: #2c3e50; margin-top: 20px;"><span t-field="o.company_id.name"/></h3>
                            </div>
                        </div>

                        <!-- Title -->
                        <div class="text-center mb-5 mt-5">
                            <h2 style="color: #2c3e50; font-weight: bold; letter-spacing: 1px;">DHL DELAY CLAIM</h2>
                            <div style="width: 80px; height: 3px; background-color: #3498db; margin: 15px auto;"></div>
                        </div>

                        <!-- General Information -->
                        <div style="margin-top: 50px; margin-bottom: 50px;">
                            <h5 style="color: #7f8c8d; margin-bottom: 30px; font-weight: 600;">GENERAL INFORMATION</h5>
                            
                            <div class="row" style="margin-bottom: 40px;">
                                <div class="col-6">
                                    <table class="table table-borderless" style="font-size: 13px;">
                                        <tr style="height: 45px;">
                                            <td style="width: 35%; color: #7f8c8d;">Supplier</td>
                                            <td><span t-field="o.supplier_id" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                        <tr style="height: 45px;">
                                            <td style="color: #7f8c8d;">BL Reference</td>
                                            <td><span t-field="o.bl_id" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                        <tr style="height: 45px;">
                                            <td style="color: #7f8c8d;">Origin</td>
                                            <td><span t-field="o.origin" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                        <tr style="height: 45px;">
                                            <td style="color: #7f8c8d;">Invoice Number</td>
                                            <td><span t-field="o.invoice_number" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6">
                                    <table class="table table-borderless" style="font-size: 13px;">
                                        <tr style="height: 45px;">
                                            <td style="width: 35%; color: #7f8c8d;">Article</td>
                                            <td><span t-field="o.article_id" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                        <tr style="height: 45px;">
                                            <td style="color: #7f8c8d;">LOT</td>
                                            <td><span t-field="o.lot" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                        <tr style="height: 45px;">
                                            <td style="color: #7f8c8d;">Claim Date</td>
                                            <td><span t-field="o.claim_date" style="color: #2c3e50; font-weight: 500;"/></td>
                                        </tr>
                                        <tr style="height: 45px;">
                                            <td style="color: #7f8c8d;">Amount Due</td>
                                            <td><span t-field="o.amount_due" style="color: #e74c3c; font-weight: 600; font-size: 14px;"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Delay Details -->
                        <div style="margin-top: 60px;">
                            <h5 style="color: #7f8c8d; margin-bottom: 30px; font-weight: 600;">DELAY DETAILS</h5>
                            
                            <table class="table" style="font-size: 13px;">
                                <thead>
                                    <tr style="background-color: #f8f9fa; border-top: 2px solid #dee2e6; border-bottom: 2px solid #dee2e6;">
                                        <th style="padding: 20px; color: #2c3e50; font-weight: 600; text-align: center;">Planned ETA</th>
                                        <th style="padding: 20px; color: #2c3e50; font-weight: 600; text-align: center;">DHL ETA</th>
                                        <th style="padding: 20px; color: #2c3e50; font-weight: 600; text-align: center;">Delay (Days)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="padding: 25px; text-align: center; color: #34495e;"><span t-field="o.eta_planned" style="font-size: 14px;"/></td>
                                        <td style="padding: 25px; text-align: center; color: #34495e;"><span t-field="o.eta_dhl" style="font-size: 14px;"/></td>
                                        <td style="padding: 25px; text-align: center;">
                                            <span t-field="o.dhl_delay" style="font-weight: 600; color: #e74c3c; font-size: 16px;"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

