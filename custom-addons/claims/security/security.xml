<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_claims">
            <field name="name">Claims Management</field>
            <field name="description">Manage access to Claims</field>
            <field name="sequence">10</field>
        </record>

        <!-- User Group (Employees) -->
        <record id="group_claims_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_claims"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group (Admins) -->
        <record id="group_claims_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_claims"/>
            <field name="implied_ids" eval="[(4, ref('group_claims_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
