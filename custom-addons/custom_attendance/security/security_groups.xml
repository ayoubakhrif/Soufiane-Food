<odoo>
    <record id="module_category_custom_attendance" model="ir.module.category">
        <field name="name">Custom Attendance</field>
        <field name="description">Access levels for Custom Attendance module</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_custom_attendance_employee" model="res.groups">
        <field name="name">Employee (Read-Only)</field>
        <field name="category_id" ref="module_category_custom_attendance"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_custom_attendance_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_custom_attendance"/>
        <field name="implied_ids" eval="[(4, ref('group_custom_attendance_employee'))]"/>
    </record>

    <record id="group_custom_attendance_entry_agent" model="res.groups">
        <field name="name">Entry Agent</field>
        <field name="category_id" ref="module_category_custom_attendance"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_custom_attendance_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_custom_attendance"/>
        <field name="implied_ids" eval="[(4, ref('group_custom_attendance_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
