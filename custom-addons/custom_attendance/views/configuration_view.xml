<odoo>
    <record id="view_custom_attendance_config_form" model="ir.ui.view">
        <field name="name">custom.attendance.config.form</field>
        <field name="model">custom.attendance.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group string="Schedule">
                        <group>
                            <field name="official_check_in" widget="float_time"/>
                            <field name="official_check_out" widget="float_time"/>
                        </group>
                        <group>
                            <field name="working_hours_per_day" widget="float_time"/>
                            <field name="non_working_day"/>
                        </group>
                    </group>
                    <group string="Règles de calcul">
                        <group>
                            <field name="annual_leave_quota"/>
                            <field name="delay_tolerance"/>
                        </group>
                        <group>
                            <field name="overtime_coefficient"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Jours Fériés">
                            <field name="public_holiday_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_custom_attendance_config_tree" model="ir.ui.view">
        <field name="name">custom.attendance.config.tree</field>
        <field name="model">custom.attendance.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="official_check_in" widget="float_time"/>
                <field name="official_check_out" widget="float_time"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_custom_attendance_config" model="ir.actions.act_window">
        <field name="name">Configuration</field>
        <field name="res_model">custom.attendance.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer la configuration principale
            </p>
        </field>
    </record>
</odoo>
