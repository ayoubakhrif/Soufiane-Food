<odoo>
    <record id="view_custom_monthly_salary_tree" model="ir.ui.view">
        <field name="name">custom.monthly.salary.tree</field>
        <field name="model">custom.monthly.salary</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state == 'validated'" decoration-info="state == 'draft'">
                <field name="employee_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="base_salary" widget="monetary"/>
                <field name="working_days_count"/>
                <field name="total_missing_hours"/>
                <field name="total_overtime_hours"/>
                <field name="final_salary" widget="monetary" decoration-bf="1"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_custom_monthly_salary_form" model="ir.ui.view">
        <field name="name">custom.monthly.salary.form</field>
        <field name="model">custom.monthly.salary</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Validé" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span> Employé: </span>
                            <field name="employee_id" readonly="state == 'validated'"/>
                            <span> Mois: </span>
                            <field name="month" readonly="state == 'validated'"/> 
                            <span> Année: </span>
                            <field name="year" readonly="state == 'validated'"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Salaire de base">
                            <field name="base_salary" widget="monetary"/>
                            <field name="working_days_count"/>
                            <field name="hourly_salary" widget="monetary"/>
                        </group>
                        <group string="Résumé de présence">
                            <field name="total_normal_hours"/>
                            <field name="total_missing_hours" decoration-danger="total_missing_hours &gt; 0"/>
                            <field name="total_overtime_hours" decoration-success="total_overtime_hours &gt; 0"/>
                        </group>
                    </group>
                    <group string="Calcul final">
                        <group>
                            <field name="deduction_amount" widget="monetary" decoration-danger="1"/>
                            <field name="overtime_amount" widget="monetary" decoration-success="1"/>
                        </group>
                        <group>
                            <field name="final_salary" widget="monetary" decoration-bf="1" style="font-size: 1.5em;"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_custom_monthly_salary" model="ir.actions.act_window">
        <field name="name">Monthly Salaries</field>
        <field name="res_model">custom.monthly.salary</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
