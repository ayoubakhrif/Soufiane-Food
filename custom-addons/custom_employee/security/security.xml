<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_custom_employee" model="ir.module.category">
        <field name="name">Custom Employee</field>
        <field name="description">Manage Custom Employees</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_core_employee_user" model="res.groups">
        <field name="name">Utilisateur</field>
        <field name="category_id" ref="module_category_custom_employee"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_core_employee_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_custom_employee"/>
        <field name="implied_ids" eval="[(4, ref('group_core_employee_user'))]"/>
    </record>
</odoo>
