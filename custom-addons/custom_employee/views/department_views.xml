<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Department Tree View -->
    <record id="view_core_department_tree" model="ir.ui.view">
        <field name="name">core.department.tree</field>
        <field name="model">core.department</field>
        <field name="arch" type="xml">
            <tree string="Departments">
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="employee_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Department Form View -->
    <record id="view_core_department_form" model="ir.ui.view">
        <field name="name">core.department.form</field>
        <field name="model">core.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_core_employee)d" type="action"
                                class="oe_stat_button" icon="fa-users"
                                context="{'default_department_id': active_id, 'search_default_department_id': active_id}">
                            <field name="employee_count" widget="statinfo" string="Employees"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Department Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="manager_id"/>
                            <field name="active"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Child Departments">
                            <field name="child_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="manager_id"/>
                                    <field name="employee_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Department Kanban View -->
    <record id="view_core_department_kanban" model="ir.ui.view">
        <field name="name">core.department.kanban</field>
        <field name="model">core.department</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="color"/>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="employee_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div t-if="record.manager_id.raw_value">
                                    <i class="fa fa-user"/> <field name="manager_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-users"/> <field name="employee_count"/> employees
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Department Action -->
    <record id="action_core_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">core.department</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

</odoo>
