<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search View -->
    <record id="view_core_employee_search" model="ir.ui.view">
        <field name="name">core.employee.search</field>
        <field name="model">core.employee</field>
        <field name="arch" type="xml">
            <search string="Employees">
                <field name="name"/>
                <field name="job_title"/>
                <field name="department"/>
                <field name="site"/>
                <field name="email"/>
                <field name="phone"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Job Position" name="group_job" context="{'group_by': 'job_position_id'}"/>
                    <filter string="Site" name="group_site" context="{'group_by': 'site'}"/>
                    <filter string="Manager" name="group_manager" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_core_employee_tree" model="ir.ui.view">
        <field name="name">core.employee.tree</field>
        <field name="model">core.employee</field>
        <field name="arch" type="xml">
            <tree string="Employees" sample="1">
                <field name="name"/>
                <field name="job_position_id"/>
                <field name="department_id"/>
                <field name="site"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="matriculation_cnss"/>
                <field name="matriculation"/>
                <field name="parent_id"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_core_employee_form" model="ir.ui.view">
        <field name="name">core.employee.form</field>
        <field name="model">core.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Employee Name"/>
                        </h1>
                        <h2>
                            <field name="job_position_id" placeholder="Job Position"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group string="Personal Information">
                            <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                            <field name="cin"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="rib"/>
                            <field name="monthly_salary"/>
                            <field name="cnss_salary"/>
                            <field name="matriculation_cnss"/>
                            <field name="matriculation"/>
                        </group>
                        <group string="Organisation">
                            <field name="job_position_id" options="{'no_create': True}"/>
                            <field name="ste_id" options="{'no_create': True}"/>
                            <field name="department_id"/>
                            <field name="site"/>
                            <field name="entry_date"/>
                            <field name="contract_date"/>
                            <field name="active"/>
                            <field name="parent_id"/>
                            <field name="user_id"/>
                            <field name="declared_days"/>
                        </group>
                    </group>
                    
                    <group string="Signature">
                         <field name="signature" widget="signature"/>
                    </group>
                    
                    <notebook>
                        <page string="Subordinates">
                            <field name="child_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="job_title"/>
                                    <field name="email"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents">
                            <field name="document_ids" context="{'default_employee_id': active_id}">
                                <tree>
                                    <field name="doc_type"/>
                                    <field name="issue_date"/>
                                    <field name="filename"/>
                                </tree>
                                <form string="Employee Document">
                                    <group>
                                        <group>
                                            <field name="doc_type"/>
                                            <field name="issue_date"/>
                                            <field name="filename"/>
                                        </group>
                                        <group>
                                            <field name="document_file" filename="filename"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="note"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Days Remaining">
                            <field name="document_expiration_cards_html" widget="html" readonly="1" nolabel="1"/>
                        </page>
                        <page string="Job History">
                            <field name="job_history_ids" readonly="1">
                                <tree>
                                    <field name="job_position_id"/>
                                    <field name="department_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="is_current" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Salary History">
                            <field name="salary_history_ids" readonly="1">
                                <tree>
                                    <field name="monthly_salary"/>
                                    <field name="cnss_salary"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="change_reason"/>
                                    <field name="is_current" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
   <!-- Kanban View -->
    <record id="view_core_employee_kanban" model="ir.ui.view">
        <field name="name">core.employee.kanban</field>
        <field name="model">core.employee</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="job_position_id"/>
                <field name="department_id"/>
                <field name="image_1920"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <t t-if="record.image_1920.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('core.employee', 'image_1920', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <div class="o_kanban_image_fill_left d-none d-md-block o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('core.employee', 'image_1920', record.id.raw_value, placeholder=True)})" role="img"/>
                            </t>
                            
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li t-if="record.job_position_id.raw_value"><field name="job_position_id"/></li>
                                    <li t-if="record.department_id.raw_value"><field name="department_id"/></li>
                                    <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_core_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">core.employee</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your first employee!
          </p>
        </field>
    </record>

</odoo>
