<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_login_logo" inherit_id="web.login">
        
        <!-- Injecter le logo au-dessus du formulaire de login -->
        <xpath expr="//div[contains(@class, 'o_login_form')]" position="before">
            <div class="my-login-logo" style="text-align:center; margin-bottom:20px;">
                <img src="/custom_login_logo/static/src/img/logo.png"
                     style="max-width:200px;"/>
            </div>
        </xpath>

    </template>
</odoo>
