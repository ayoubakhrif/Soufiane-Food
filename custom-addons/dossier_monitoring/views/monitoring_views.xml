<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SEARCH VIEW -->
    <record id="view_dossier_monitoring_search" model="ir.ui.view">
        <field name="name">dossier.monitoring.search</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <search string="Monitoring Search">
                <field name="bl_number"/>
                <field name="contract_id"/>
                <field name="supplier_id"/>
                <field name="phase"/>
                <group expand="0" string="Group By">
                    <filter string="Phase" name="group_phase" context="{'group_by': 'phase'}"/>
                    <filter string="Supplier" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_dossier_monitoring_kanban" model="ir.ui.view">
        <field name="name">dossier.monitoring.kanban</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <kanban default_group_by="phase" create="false" edit="false" delete="false" records_draggable="false">
                <field name="bl_number"/>
                <field name="contract_id"/>
                <field name="supplier_id"/>
                <field name="company_id"/>
                <field name="phase"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="bl_number"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Contract: <field name="contract_id"/></li>
                                    <li>Supplier: <field name="supplier_id"/></li>
                                    <li>Company: <field name="company_id"/></li>
                                </ul>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- Phase Indicator Icons could go here -->
                                        <field name="phase" widget="label_selection"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <!-- Check logic for urgency if needed -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_dossier_monitoring_tree" model="ir.ui.view">
        <field name="name">dossier.monitoring.tree</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <tree string="Dossier Lifecycles" create="false" edit="false" delete="false" decoration-muted="phase == '9_closed'" decoration-success="phase == '8_delivered'" decoration-info="phase == '6_transit'">
                <field name="bl_number"/>
                <field name="contract_id"/>
                <field name="supplier_id"/>
                <field name="phase" widget="badge"/>
                <field name="date_booking" optional="show"/>
                <field name="eta_dhl" optional="show"/>
                <field name="bad_date" optional="show"/>
                <field name="exit_date" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_dossier_monitoring" model="ir.actions.act_window">
        <field name="name">Dossier Lifecycle Monitoring</field>
        <field name="res_model">dossier.monitoring</field>
        <field name="view_mode">kanban,tree</field>
        <field name="context">{'search_default_group_phase': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No dossiers found.
            </p>
        </field>
    </record>

    <!-- MENUS -->
    <menuitem id="menu_dossier_monitoring_root" name="Monitoring" sequence="50" web_icon="dossier_monitoring,static/description/icon.png"/>
    <menuitem id="menu_dossier_monitoring_dashboard" name="Dashboard" parent="menu_dossier_monitoring_root" action="action_dossier_monitoring" sequence="1"/>

</odoo>
