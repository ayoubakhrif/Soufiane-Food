<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SEARCH VIEW -->
    <record id="view_dossier_monitoring_search" model="ir.ui.view">
        <field name="name">dossier.monitoring.search</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <search string="Recherche Monitoring">
                <field name="bl_number" string="Numéro BL"/>
                <field name="contract_id" string="Contrat"/>
                <field name="supplier_id" string="Fournisseur"/>
                <field name="phase" string="Phase"/>
                <group expand="0" string="Grouper par">
                    <filter string="Phase" name="group_phase" context="{'group_by': 'phase'}"/>
                    <filter string="Fournisseur" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter string="Société" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_dossier_monitoring_kanban" model="ir.ui.view">
        <field name="name">dossier.monitoring.kanban</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <kanban default_group_by="phase" create="false" edit="false" delete="false" records_draggable="false" class="o_kanban_dashboard">
                <field name="bl_number"/>
                <field name="contract_id"/>
                <field name="supplier_id"/>
                <field name="company_id"/>
                <field name="phase"/>
                <field name="article_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="bl_number"/>
                                </strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li><i class="fa fa-cube"/> <field name="article_id"/></li>
                                    <li><i class="fa fa-file-contract"/> <field name="contract_id"/></li>
                                    <li><i class="fa fa-industry"/> <field name="supplier_id"/></li>
                                    <li><i class="fa fa-building"/> <field name="company_id"/></li>
                                </ul>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="phase" widget="label_selection" options="{'classes': {'9_closed': 'success', '8_delivered': 'info'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- FORM VIEW (HTML Only) -->
    <record id="view_dossier_monitoring_form" model="ir.ui.view">
        <field name="name">dossier.monitoring.form</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <form string="Détail Dossier" create="false" edit="false" delete="false">
                <sheet>
                    <field name="lifecycle_html"
                    widget="html"
                    readonly="1"
                    nolabel="1"
                    options="{'sanitize': False}"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_dossier_monitoring_tree" model="ir.ui.view">
        <field name="name">dossier.monitoring.tree</field>
        <field name="model">dossier.monitoring</field>
        <field name="arch" type="xml">
            <tree string="Cycle de Vie Dossiers" create="false" edit="false" delete="false" decoration-muted="phase == '9_closed'" decoration-success="phase == '8_delivered'" decoration-info="phase == '6_transit'">
                <field name="bl_number"/>
                <field name="contract_id"/>
                <field name="supplier_id"/>
                <field name="phase" widget="badge"/>
                <field name="date_booking" optional="show"/>
                <field name="eta_dhl" optional="show"/>
                <field name="bad_date" optional="show"/>
                <field name="exit_date" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_dossier_monitoring" model="ir.actions.act_window">
        <field name="name">Dossier Lifecycle Monitoring</field>
        <field name="res_model">dossier.monitoring</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_group_phase': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No dossiers found.
            </p>
        </field>
    </record>

    <!-- MENUS -->
    <menuitem id="menu_dossier_monitoring_root" name="Monitoring" sequence="50" web_icon="dossier_monitoring,static/description/icon.png" groups="dossier_monitoring.group_monitoring_viewer"/>
    <menuitem id="menu_dossier_monitoring_dashboard" name="Dashboard" parent="menu_dossier_monitoring_root" action="action_dossier_monitoring" sequence="1"/>

</odoo>
