<odoo>
    <record id="view_ecole_class_tree" model="ir.ui.view">
        <field name="name">ecole.class.tree</field>
        <field name="model">ecole.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="level"/>
            </tree>
        </field>
    </record>
    
    <record id="view_ecole_class_form" model="ir.ui.view">
        <field name="name">ecole.class.form</field>
        <field name="model">ecole.class</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="level"/>
                    </group>
                    <notebook>
                        <page string="Etudiants">
                            <field name="student_ids" readonly="1">
                                <tree>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="MatiÃ¨res">
                            <field name="subject_ids">
                                <tree editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="coefficient"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ecole_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">ecole.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ecole_class" name="Classes" parent="menu_ecole_root" action="action_ecole_class" sequence="30"/>
</odoo>
