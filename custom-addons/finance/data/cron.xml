<odoo>
    <data noupdate="1">

        <record id="ir_cron_sync_chq_pdf" model="ir.cron">
            <field name="name">Synchroniser PDF CHQ</field>
            <field name="model_id" ref="model_datacheque"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_all_chq_pdf()</field>

            <!-- Tous les jours -->
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>

            <!-- Nombre d'exécutions : -1 = illimité -->
            <field name="numbercall">-1</field>
            <field name="active">True</field>

            <!-- Première exécution : à adapter si tu veux -->
            <!-- ATTENTION : heure en UTC côté serveur -->
            <field name="nextcall">2025-12-05 19:00:00</field>
        </record>

        <record id="ir_cron_update_talons" model="ir.cron">
            <field name="name">Finance: Update Talons</field>
            <field name="model_id" ref="model_datacheque"/>
            <field name="state">code</field>
            <field name="code">model.cron_find_all_talons()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">3</field>
            <field name="nextcall" eval="'2025-12-10 21:00:00'"/> <!-- 22:00 Local (UTC+1) -->
        </record>

        <record id="ir_cron_sync_all_pdf" model="ir.cron">
            <field name="name">Finance: Update Existence Flags</field>
            <field name="model_id" ref="model_datacheque"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_all_pdf()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">1</field>
            <field name="nextcall">2025-12-11 13:30:00</field> <!-- 14:30 Local (UTC+1) -->
        </record>

        <record id="ir_cron_simulate_dem_click" model="ir.cron">
            <field name="name">Finance: Simulate DEM Click</field>
            <field name="model_id" ref="model_datacheque"/>
            <field name="state">code</field>
            <field name="code">model.cron_simulate_dem_click()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <!-- ✅ NOUVEAU CRON : Exécuter action_open_pdf_dem une seule fois aujourd'hui à 12:40 -->
        <record id="ir_cron_execute_dem_once" model="ir.cron">
            <field name="name">Finance: Execute DEM Action Once</field>
            <field name="model_id" ref="model_datacheque"/>
            <field name="state">code</field>
            <field name="code">
for rec in model.search([]):
    rec.action_open_pdf_dem()
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">1</field> <!-- Une seule exécution -->
            <field name="nextcall">2025-12-13 11:40:00</field> <!-- 12:40 Local (UTC+1) = 11:40 UTC -->
            <field name="active">True</field>
        </record>

        <!-- ✅ Computation des tags d'existence une seule fois aujourd'hui à 12:45 -->
        <record id="ir_cron_compute_existance_tags_once" model="ir.cron">
            <field name="name">Finance: Compute Existence Tags Once</field>
            <field name="model_id" ref="model_datacheque"/>
            <field name="state">code</field>
            <field name="code">
records = model.search([])
records._compute_existance_tag()
records._compute_existance_dem_tag()
records._compute_existance_doc_tag()
            </field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">1</field>
            <field name="nextcall">2025-12-13 11:45:00</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>