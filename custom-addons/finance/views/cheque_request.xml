<odoo>
    <record id="view_finance_cheque_request_tree" model="ir.ui.view">
        <field name="name">finance.cheque.request.tree</field>
        <field name="model">finance.cheque.request</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-warning="state == 'pending'">
                <field name="request_date"/>
                <field name="ste_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_finance_cheque_request_form" model="ir.ui.view">
        <field name="name">finance.cheque.request.form</field>
        <field name="model">finance.cheque.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" 
                            invisible="state != 'pending'" 
                            string="Approuver" 
                            type="object" 
                            class="oe_highlight btn-success" 
                            icon="fa-check"/>
                            
                    <button name="action_reject" 
                            invisible="state != 'pending'" 
                            string="Rejeter" 
                            type="object" 
                            class="btn-danger" 
                            icon="fa-times"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group invisible="1">
                        <field name="ste_id"/>
                        <field name="request_date"/>
                    </group>
                    
                    <!-- HTML Preview Display -->
                    <div style="background-color: #f9f9f9; padding: 20px; border-radius: 8px; border: 1px solid #e0e0e0;">
                        <field name="preview_html" widget="html" readonly="1" nolabel="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_finance_cheque_request_search" model="ir.ui.view">
        <field name="name">finance.cheque.request.search</field>
        <field name="model">finance.cheque.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="ste_id"/>
                <filter string="En attente" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Traités" name="processed" domain="[('state', 'in', ['approved', 'rejected'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Société" name="group_ste" context="{'group_by': 'ste_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action: Cheque Requests Pending -->
    <record id="action_finance_cheque_request_pending" model="ir.actions.act_window">
        <field name="name">Demandes talons</field>
        <field name="res_model">finance.cheque.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="domain">[('state', '=', 'pending')]</field>
    </record>

    <!-- Action: Cheque Requests History -->
    <record id="action_finance_cheque_request_history" model="ir.actions.act_window">
        <field name="name">Demandes talons</field>
        <field name="res_model">finance.cheque.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('state', 'in', ['approved', 'rejected'])]</field>
    </record>

    <!-- Menu: Pending -->
    <menuitem id="menu_finance_cheque_request_pending" 
              name="Demandes talons" 
              parent="finance.menu_finance_demandes" 
              action="action_finance_cheque_request_pending" 
              sequence="20" 
              groups="finance.group_finance_user"/>

    <!-- Menu: History -->
    <menuitem id="menu_finance_cheque_request_history" 
              name="Demandes talons" 
              parent="finance.menu_finance_historique" 
              action="action_finance_cheque_request_history" 
              sequence="20" 
              groups="finance.group_finance_user"/>
</odoo>
