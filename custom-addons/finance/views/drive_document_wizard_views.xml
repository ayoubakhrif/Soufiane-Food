<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_finance_add_drive_document_wizard_form" model="ir.ui.view">
        <field name="name">finance.add.drive.document.wizard.form</field>
        <field name="model">finance.add.drive.document.wizard</field>
        <field name="arch" type="xml">
            <form string="Ajouter un document Google Drive">
                <sheet>
                    <group>
                        <field name="cheque_id"/>
                        <field name="doc_type"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_open_picker" 
                            string="Choisir depuis Google Drive" 
                            type="object" 
                            class="btn-primary" 
                            icon="fa-google"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
