<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_finance_sutra_payment_tree" model="ir.ui.view">
        <field name="name">finance.sutra.payment.tree</field>
        <field name="model">finance.sutra.payment</field>
        <field name="arch" type="xml">
            <tree string="Paiements Sutra" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'">
                <field name="date"/>
                <field name="cheque_id"/>
                <field name="amount_total" sum="Total"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'"/>
            </tree>
        </field>
    </record>

    <record id="view_finance_sutra_payment_form" model="ir.ui.view">
        <field name="name">finance.sutra.payment.form</field>
        <field name="model">finance.sutra.payment</field>
        <field name="arch" type="xml">
            <form string="Paiement Sutra">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="cheque_id" readonly="state != 'draft'" options="{'no_create': True, 'no_open': True}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="amount_total"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Factures Sutra">
                            <field name="sutra_ids" readonly="state != 'draft'" domain="[('payment_id', '=', False)]">
                                <tree>
                                    <field name="bl_number"/>
                                    <field name="facture_sutra"/>
                                    <field name="dum"/>
                                    <field name="total" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                     <field name="message_follower_ids"/>
                     <field name="activity_ids"/>
                     <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_finance_sutra_payment" model="ir.actions.act_window">
        <field name="name">Paiements Sutra</field>
        <field name="res_model">finance.sutra.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_finance_sutra_payment"
              name="Paiements Sutra"
              parent="menu_finance_sutra_root"
              action="action_finance_sutra_payment"
              sequence="20"/>
</odoo>
