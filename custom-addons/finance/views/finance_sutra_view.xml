<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE VIEW -->
    <record id="view_finance_sutra_tree" model="ir.ui.view">
        <field name="name">finance.sutra.tree</field>
        <field name="model">finance.sutra</field>
        <field name="arch" type="xml">
            <tree string="Sutra Dossiers">
                <field name="dossier_num" optional="show"/>
                <field name="bl_number" />
                <field name="dum"/>
                <field name="ste_id"/>
                <field name="supplier_id"/>
                <field name="cheque_id"/>
                <field name="amount" sum="Total Montant"/>
                <field name="encaisse" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_finance_sutra_form" model="ir.ui.view">
        <field name="name">finance.sutra.form</field>
        <field name="model">finance.sutra</field>
        <field name="arch" type="xml">
            <form string="Sutra Dossier">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="bl_number" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Informations Douane (Source: Logistique/Douane)">
                            <field name="douane_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="ste_id"/>
                            <field name="supplier_id"/>
                            <field name="dum"/>
                            <field name="dum_date"/>
                            <field name="eta"/>
                            <field name="amount_mad"/>
                            <field name="customs_total"/>
                        </group>
                        
                        <group string="Informations Finance (Editable)">
                            <field name="dossier_num"/>
                            <field name="regime"/>
                            <field name="facture_sutra"/>
                            <field name="scan_facture" widget="url"/>
                            <field name="honoraires"/>
                            <field name="temsa"/>
                        </group>
                    </group>

                    <group string="Information Chèque">
                        <group>
                            <field name="cheque_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="date_emission"/>
                            <field name="date_echeance"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="date_encaissement"/>
                            <field name="encaisse" widget="boolean_toggle"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Conteneurs" name="containers">
                            <field name="container_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_finance_sutra_search" model="ir.ui.view">
        <field name="name">finance.sutra.search</field>
        <field name="model">finance.sutra</field>
        <field name="arch" type="xml">
            <search string="Search Sutra">
                <field name="bl_number"/>
                <field name="dossier_num"/>
                <field name="dum"/>
                <field name="ste_id"/>
                <field name="supplier_id"/>
                <field name="facture_sutra"/>
                <field name="cheque_id"/>
                <filter string="Encaissé" name="encaisse" domain="[('encaisse', '=', True)]"/>
                <filter string="Non Encaissé" name="non_encaisse" domain="[('encaisse', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_finance_sutra" model="ir.actions.act_window">
        <field name="name">Sutra</field>
        <field name="res_model">finance.sutra</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez un nouveau dossier Sutra manuellement.
            </p>
        </field>
    </record>

    <!-- SERVER ACTION -->
    <record id="action_finance_sutra_sync" model="ir.actions.server">
        <field name="name">Synchronize from Douane</field>
        <field name="model_id" ref="model_finance_sutra"/>
        <field name="binding_model_id" ref="model_finance_sutra"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_sync_from_douane()
        </field>
    </record>

    <!-- MENUS -->
    <menuitem id="menu_finance_sutra_marglory_root"
              name="Sutra / Marglory"
              parent="finance_root_menu"
              sequence="40"/>

    <menuitem id="menu_finance_sutra"
              name="Sutra"
              parent="menu_finance_sutra_marglory_root"
              action="action_finance_sutra"
              sequence="10"/>

    <menuitem id="menu_finance_sutra_sync"
              name="Synchroniser"
              parent="menu_finance_sutra_marglory_root"
              action="action_finance_sutra_sync"
              sequence="20"
              groups="finance.group_finance_user"/>

</odoo>
