<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_finance_logistics_tracking_form" model="ir.ui.view">
        <field name="name">finance.logistics.tracking.form</field>
        <field name="model">finance.logistics.tracking</field>
        <field name="arch" type="xml">
            <form string="Suivi Contenaires" create="0">
                <header>
                    <div class="oe_button_box" position="inside">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-hourglass-half" invisible="status != 'in_progress'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-warning" style="font-size: 16px; font-weight: bold;">En cours</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-truck" invisible="status != 'get_out'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-success" style="font-size: 16px; font-weight: bold;">Get Out</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="status != 'closed'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-danger" style="font-size: 16px; font-weight: bold;">Cloturé</span>
                            </div>
                        </button>
                    </div>
                    <field name="status" widget="statusbar" options="{'clickable': '0'}"/>
                </header>
                <sheet>
                    <group>
                        <group string="Données Finance">
                            <field name="entry_id" invisible="1"/>
                            <field name="container_id" invisible="1"/> 
                            <field name="container_display" readonly="1"/>
                            <field name="prov_number" readonly="status == 'closed'" required="status in ['in_progress', 'get_out']"/>
                            <field name="def_number" readonly="status != 'closed'" invisible="status != 'closed'" required="status == 'closed'"/>
                        </group>
                    </group>
                    <group string="Données Logistiques (Read-only)">
                        <group>
                            <field name="ste_id"/>
                            <field name="supplier_id"/>
                            <field name="article_id"/>
                            <field name="shipping_id"/>
                        </group>
                        <group>
                            <field name="week"/>
                            <field name="invoice_number"/>
                            <field name="bl_number"/>
                        </group>
                        <group>
                            <field name="weight"/>
                            <field name="eta"/>
                            <field name="free_time"/>
                            <field name="details"/>
                        </group>
                    </group>
                    <group string="Remarques">
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_finance_logistics_tracking_tree" model="ir.ui.view">
        <field name="name">finance.logistics.tracking.tree</field>
        <field name="model">finance.logistics.tracking</field>
        <field name="arch" type="xml">
            <tree string="Suivi Conteneurs" create="0" delete="0">
                <field name="container_display"/>
                <field name="status"/>
                <field name="ste_id"/>
                <field name="prov_number"/>
                <field name="def_number"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_finance_logistics_tracking" model="ir.actions.act_window">
        <field name="name">Suivi Conteneurs</field>
        <field name="res_model">finance.logistics.tracking</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Les dossiers logistiques apparaissent automatiquement ici.
            </p>
            <p>
                Vous pouvez saisir les champs finance (N° Prov, N° Def) directement.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_finance_logistics_root"
              name="Logistique"
              parent="finance_root_menu"
              sequence="15"/>

    <menuitem id="menu_finance_logistics_tracking"
              name="Suivi Conteneurs"
              parent="menu_finance_logistics_root"
              action="action_finance_logistics_tracking"
              sequence="10"/>

</odoo>
