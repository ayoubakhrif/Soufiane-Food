<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_finance_logistics_tracking_form" model="ir.ui.view">
        <field name="name">finance.logistics.tracking.form</field>
        <field name="model">finance.logistics.tracking</field>
        <field name="arch" type="xml">
            <form string="Suivi Contenaires">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '0'}"/>
                </header>
                <sheet>
                    <group>
                        <group string="Sélection">
                            <field name="entry_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="container_id" invisible="1"/> 
                        </group>
                        <group string="Données Finance">
                            <field name="prov_number" readonly="status == 'closed'" required="status in ['in_progress', 'get_out']"/>
                            <field name="def_number" readonly="status != 'closed'" invisible="status != 'closed'" required="status == 'closed'"/>
                        </group>
                    </group>
                    <group string="Données Logistiques (Read-only)">
                        <group>
                            <field name="ste_id"/>
                            <field name="supplier_id"/>
                            <field name="article_id"/>
                            <field name="shipping_id"/>
                        </group>
                        <group>
                            <field name="week"/>
                            <field name="invoice_number"/>
                            <field name="bl_number"/>
                        </group>
                        <group>
                            <field name="weight"/>
                            <field name="eta"/>
                            <field name="free_time"/>
                            <field name="details"/>
                        </group>
                    </group>
                    <group string="Remarques">
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_finance_logistics_tracking_tree" model="ir.ui.view">
        <field name="name">finance.logistics.tracking.tree</field>
        <field name="model">finance.logistics.tracking</field>
        <field name="arch" type="xml">
            <tree string="Suivi Conteneurs">
                <field name="entry_id"/>
                <field name="container_id"/>
                <field name="status"/>
                <field name="ste_id"/>
                <field name="prov_number"/>
                <field name="def_number"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_finance_logistics_tracking" model="ir.actions.act_window">
        <field name="name">Suivi Conteneurs</field>
        <field name="res_model">finance.logistics.tracking</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez un nouveau suivi pour saisir les champs finance d'un dossier logistique.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_finance_logistics_root"
              name="Logistique"
              parent="finance_root_menu"
              sequence="15"/>

    <menuitem id="menu_finance_logistics_tracking"
              name="Suivi Conteneurs"
              parent="menu_finance_logistics_root"
              action="action_finance_logistics_tracking"
              sequence="10"/>

</odoo>
