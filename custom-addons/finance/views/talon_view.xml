<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- âš™ï¸ Actions pour boutons -->
    <record id="finance_talon_action" model="ir.actions.act_window">
        <field name="name">Talons</field>
        <field name="res_model">finance.talon</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <record id="view_finance_talon_form" model="ir.ui.view">
        <field name="name">finance.talon.form</field>
        <field name="model">finance.talon</field>
        <field name="arch" type="xml">
            <form string="Talons">
                <sheet>
                    <field name="progress_html" widget="html"/>
                    <group>
                        <field name="num_chq"/>
                        <field name="name_shown"/>
                        <field name="name"/>
                        <field name="ste_id"/>
                        <field name="serie"/>
                        <field name="etat"/>
                    </group>
                    <field name="summary_card" widget="html"/>
                    <notebook>
                        <page string="ChÃ¨ques absents">
                            <field name="missing_cheques_html" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ðŸŒ³ Vue liste des clients -->
    <record id="view_finance_talon_tree" model="ir.ui.view">
        <field name="name">finance.talon.tree</field>
        <field name="model">finance.talon</field>
        <field name="arch" type="xml">
            <tree>
                <field name="num_chq"/>
                <field name="name_shown"/>
                <field name="name"/>
                <field name="ste_id"/>
                <field name="serie"/>
                <field name="etat"/>
                <field name="used_chqs"/>
                <field name="unused_chqs"/>
                <field name="usage_percentage" widget="percentpie"/>
            </tree>
        </field>
    </record>

    <record id="view_finance_talon_graph" model="ir.ui.view">
        <field name="name">finance.talon.graph</field>
        <field name="model">finance.talon</field>
        <field name="arch" type="xml">
            <graph string="Talons Analytics" type="bar">
                <field name="name_shown" type="row"/>
                <field name="usage_percentage" type="measure"/>
            </graph>
        </field>
    </record>

    <menuitem id="finance_talon_menu"
              name="Talons"
              parent="finance_root_menu"
              action="finance_talon_action"/>
</odoo>
