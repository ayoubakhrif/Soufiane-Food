<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- D√©finition du rapport -->
    <record id="action_report_client_week_invoice" model="ir.actions.report">
        <field name="name">Facture Hebdomadaire Client</field>
        <field name="model">client.week.invoice.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kal3iya.report_client_week_invoice_document</field>
        <field name="report_file">kal3iya.report_client_week_invoice_document</field>
        <field name="binding_model_id" ref="model_client_week_invoice_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Template QWeb du rapport -->
    <template id="report_client_week_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <t t-set="client" t-value="wizard.client_id"/>
                <t t-set="week_data" t-value="client._get_week_data(wizard.week)"/>
                
                <div class="page">
                    <style>
                        @page {
                            margin: 15mm;
                        }
                        body {
                            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        }
                        .invoice-wrapper {
                            background: white;
                            border-radius: 20px;
                            padding: 40px;
                            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
                        }
                        .invoice-header {
                            text-align: center;
                            margin-bottom: 40px;
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                            padding: 40px;
                            border-radius: 20px;
                            color: white;
                            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
                            position: relative;
                            overflow: hidden;
                        }
                        .invoice-header::before {
                            content: '';
                            position: absolute;
                            top: -50%;
                            right: -50%;
                            width: 200%;
                            height: 200%;
                            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                        }
                        .invoice-title {
                            font-size: 42px;
                            font-weight: 900;
                            color: white;
                            margin-bottom: 20px;
                            text-transform: uppercase;
                            letter-spacing: 3px;
                            text-shadow: 3px 3px 6px rgba(0,0,0,0.3);
                            position: relative;
                            z-index: 1;
                        }
                        .client-info-box {
                            background: rgba(255,255,255,0.95);
                            padding: 25px;
                            border-radius: 15px;
                            margin-top: 20px;
                            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                            position: relative;
                            z-index: 1;
                        }
                        .client-info {
                            font-size: 18px;
                            color: #2d3748;
                            margin: 10px 0;
                            font-weight: 600;
                        }
                        .client-info strong {
                            color: #667eea;
                            margin-right: 10px;
                        }
                        .week-period {
                            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
                            color: white;
                            padding: 15px 30px;
                            border-radius: 12px;
                            margin-top: 15px;
                            display: inline-block;
                            font-size: 17px;
                            font-weight: 700;
                            box-shadow: 0 5px 15px rgba(245, 87, 108, 0.4);
                        }
                        .section-title {
                            font-size: 24px;
                            font-weight: 900;
                            color: white;
                            padding: 18px 25px;
                            margin-top: 35px;
                            margin-bottom: 20px;
                            border-radius: 15px;
                            text-transform: uppercase;
                            letter-spacing: 2px;
                            box-shadow: 0 8px 20px rgba(0,0,0,0.25);
                            position: relative;
                        }
                        .section-sorties {
                            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
                        }
                        .section-retours {
                            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
                        }
                        .section-avances {
                            background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
                        }
                        .section-recap {
                            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
                            color: #2d3748;
                        }
                        .data-table {
                            width: 100%;
                            border-collapse: separate;
                            border-spacing: 0;
                            margin-bottom: 30px;
                            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
                            border-radius: 15px;
                            overflow: hidden;
                        }
                        .data-table th {
                            background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
                            color: white;
                            padding: 16px 14px;
                            text-align: left;
                            font-weight: 700;
                            font-size: 13px;
                            text-transform: uppercase;
                            letter-spacing: 1px;
                        }
                        .data-table td {
                            padding: 14px;
                            font-size: 15px;
                            color: #2d3748;
                            background: white;
                            border-bottom: 1px solid #e2e8f0;
                        }
                        .data-table tbody tr:nth-child(odd) td {
                            background: #f7fafc;
                        }
                        .data-table tbody tr:hover td {
                            background: #edf2f7;
                            transform: scale(1.01);
                            transition: all 0.2s;
                        }
                        .total-row td {
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
                            color: white !important;
                            font-weight: 900 !important;
                            font-size: 18px !important;
                            padding: 18px 14px !important;
                            border: none !important;
                        }
                        .amount {
                            text-align: right;
                            font-weight: 900;
                            color: #667eea;
                        }
                        .total-row .amount {
                            color: white !important;
                        }
                        .recap-box {
                            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
                            border: 4px solid #ff6b6b;
                            border-radius: 20px;
                            padding: 30px;
                            margin-top: 40px;
                            box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
                        }
                        .recap-line {
                            display: flex;
                            justify-content: space-between;
                            padding: 15px 0;
                            font-size: 19px;
                            color: #2d3748;
                            font-weight: 700;
                            border-bottom: 2px dashed rgba(0,0,0,0.1);
                        }
                        .recap-line:last-of-type {
                            border-bottom: none;
                        }
                        .recap-line span:first-child {
                            color: #c53030;
                        }
                        .recap-line span:last-child {
                            color: #2d3748;
                            font-weight: 900;
                            font-size: 20px;
                        }
                        .big-total-box {
                            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
                            color: white;
                            padding: 25px 30px;
                            border-radius: 15px;
                            margin: 25px 0;
                            font-size: 24px;
                            font-weight: 900;
                            text-align: center;
                            box-shadow: 0 10px 30px rgba(240, 147, 251, 0.5);
                            text-transform: uppercase;
                            letter-spacing: 2px;
                            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
                        }
                        .recap-total {
                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                            color: white !important;
                            padding: 25px 20px !important;
                            border-radius: 15px;
                            margin-top: 25px;
                            font-size: 26px !important;
                            font-weight: 900;
                            text-align: center;
                            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.5);
                            border: none !important;
                        }
                        .recap-total span {
                            color: white !important;
                        }
                        .footer-note {
                            text-align: center;
                            margin-top: 50px;
                            padding-top: 30px;
                            border-top: 3px solid #cbd5e0;
                            color: #718096;
                            font-size: 14px;
                            font-weight: 600;
                        }
                    </style>

                    <div class="invoice-wrapper">
                        <!-- En-t√™te de la facture -->
                        <div class="invoice-header">
                            <div class="invoice-title">üìÑ FACTURE HEBDOMADAIRE</div>
                            <div class="client-info-box">
                                <div class="client-info">
                                    <strong>üè¢ Client:</strong> <t t-esc="client.name"/>
                                </div>
                                <div class="client-info">
                                    <strong>üìÖ Semaine:</strong> <t t-esc="week_data['week'].split('-W')[1]"/> (<t t-esc="week_data['week'].split('-W')[0]"/>)
                                </div>
                                <t t-if="week_data.get('start_date') and week_data.get('end_date')">
                                    <div class="week-period">
                                        üóìÔ∏è Du <t t-esc="week_data['start_date']"/> au <t t-esc="week_data['end_date']"/>
                                    </div>
                                </t>
                                <div class="client-info" style="margin-top: 15px;">
                                    <strong>üñ®Ô∏è Date d'impression:</strong> <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                                </div>
                            </div>
                        </div>

                        <!-- Section Sorties -->
                        <t t-if="week_data['sorties']">
                            <div class="section-title section-sorties">
                                üì§ SORTIES DE LA SEMAINE
                            </div>
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>DATE</th>
                                        <th>PRODUIT</th>
                                        <th>QUANTIT√â</th>
                                        <th>POIDS (KG)</th>
                                        <th>TONNAGE</th>
                                        <th>PRIX UNITAIRE</th>
                                        <th class="amount">MONTANT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="week_data['sorties']" t-as="sortie">
                                        <tr>
                                            <td><t t-esc="sortie.date_exit"/></td>
                                            <td><strong><t t-esc="sortie.product_id.name"/></strong></td>
                                            <td><t t-esc="sortie.quantity"/></td>
                                            <td><t t-esc="sortie.weight"/></td>
                                            <td><t t-esc="sortie.tonnage_final or sortie.tonnage"/></td>
                                            <td><t t-esc="sortie.selling_price_final or sortie.selling_price"/> Dh</td>
                                            <td class="amount"><t t-esc="sortie.mt_vente_final or sortie.mt_vente"/> Dh</td>
                                        </tr>
                                    </t>
                                    <tr class="total-row">
                                        <td colspan="6" style="text-align: right;"><strong>TOTAL SORTIES:</strong></td>
                                        <td class="amount"><t t-esc="'%.2f' % week_data['total_sorties']"/> Dh</td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>

                        <!-- Section Retours -->
                        <t t-if="week_data['retours']">
                            <div class="section-title section-retours">
                                üîÑ RETOURS DE LA SEMAINE
                            </div>
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>DATE</th>
                                        <th>PRODUIT</th>
                                        <th>QUANTIT√â</th>
                                        <th>POIDS (KG)</th>
                                        <th>TONNAGE</th>
                                        <th>PRIX UNITAIRE</th>
                                        <th class="amount">MONTANT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="week_data['retours']" t-as="retour">
                                        <tr>
                                            <td><t t-esc="retour.date_entry"/></td>
                                            <td><strong><t t-esc="retour.product_id.name"/></strong></td>
                                            <td><t t-esc="retour.quantity"/></td>
                                            <td><t t-esc="retour.weight"/></td>
                                            <td><t t-esc="retour.tonnage"/></td>
                                            <td><t t-esc="retour.selling_price"/> Dh</td>
                                            <td class="amount"><t t-esc="'%.2f' % (retour.selling_price * retour.tonnage)"/> Dh</td>
                                        </tr>
                                    </t>
                                    <tr class="total-row">
                                        <td colspan="6" style="text-align: right;"><strong>TOTAL RETOURS:</strong></td>
                                        <td class="amount"><t t-esc="'%.2f' % week_data['total_retours']"/> Dh</td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>

                        <!-- Section Avances -->
                        <t t-if="week_data['avances']">
                            <div class="section-title section-avances">
                                üí∞ AVANCES DE LA SEMAINE
                            </div>
                            <table class="data-table">
                                <thead>
                                    <tr>
                                        <th>DATE</th>
                                        <th>CHAUFFEUR</th>
                                        <th>MODE DE PAIEMENT</th>
                                        <th>COMMENTAIRE</th>
                                        <th class="amount">MONTANT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="week_data['avances']" t-as="avance">
                                        <tr>
                                            <td><t t-esc="avance.date_paid"/></td>
                                            <td><strong><t t-esc="avance.driver_id.name if avance.driver_id else '-'"/></strong></td>
                                            <td><t t-esc="dict(avance._fields['payment_mode'].selection).get(avance.payment_mode, '-')"/></td>
                                            <td><t t-esc="avance.comment or '-'"/></td>
                                            <td class="amount"><t t-esc="'%.2f' % avance.amount"/> Dh</td>
                                        </tr>
                                    </t>
                                    <tr class="total-row">
                                        <td colspan="4" style="text-align: right;"><strong>TOTAL AVANCES:</strong></td>
                                        <td class="amount"><t t-esc="'%.2f' % week_data['total_avances']"/> Dh</td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>

                        <!-- R√©capitulatif -->
                        <div class="section-title section-recap">
                            üìä R√âCAPITULATIF FINANCIER
                        </div>
                        <div class="recap-box">
                            <div class="recap-line">
                                <span>üíµ Total Sorties:</span>
                                <span><t t-esc="'%.2f' % week_data['total_sorties']"/> Dh</span>
                            </div>
                            <div class="recap-line">
                                <span>üîô Total Retours:</span>
                                <span>- <t t-esc="'%.2f' % week_data['total_retours']"/> Dh</span>
                            </div>
                            <div class="recap-line">
                                <span>üí∏ Total Avances:</span>
                                <span>- <t t-esc="'%.2f' % week_data['total_avances']"/> Dh</span>
                            </div>
                            <div class="big-total-box">
                                üíµ COMPTE DE LA SEMAINE : <t t-esc="'%.2f' % week_data['compte_semaine']"/> DH
                            </div>
                            <div class="recap-total">
                                <div>COMPTE TOTAL: <t t-esc="'%.2f' % week_data['compte_total']"/> Dh</div>
                            </div>
                        </div>

                        <!-- Pied de page -->
                        <div class="footer-note">
                            ‚úÖ Document g√©n√©r√© automatiquement - <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y √† %H:%M')"/>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>