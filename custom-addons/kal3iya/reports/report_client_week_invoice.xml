<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- DÃ©finition du rapport -->
    <record id="action_report_client_week_invoice" model="ir.actions.report">
        <field name="name">Facture Hebdomadaire Client</field>
        <field name="model">client.week.invoice.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kal3iya.report_client_week_invoice_document</field>
        <field name="report_file">kal3iya.report_client_week_invoice_document</field>
        <field name="binding_model_id" ref="model_client_week_invoice_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Template QWeb du rapport -->
    <template id="report_client_week_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <t t-set="client" t-value="wizard.client_id"/>
                <t t-set="week_data" t-value="client._get_week_data(wizard.week)"/>
                
                <div class="page">
                    <style>
                        .invoice-header {
                            text-align: center;
                            margin-bottom: 30px;
                            border-bottom: 3px solid #4c51bf;
                            padding-bottom: 20px;
                        }
                        .invoice-title {
                            font-size: 32px;
                            font-weight: bold;
                            color: #4c51bf;
                            margin-bottom: 10px;
                        }
                        .client-info {
                            font-size: 18px;
                            color: #2d3748;
                            margin: 5px 0;
                        }
                        .section-title {
                            font-size: 20px;
                            font-weight: bold;
                            color: white;
                            padding: 10px 15px;
                            margin-top: 25px;
                            margin-bottom: 15px;
                            border-radius: 8px;
                        }
                        .section-sorties {
                            background: #4c51bf;
                        }
                        .section-retours {
                            background: #e53e3e;
                        }
                        .section-avances {
                            background: #38a169;
                        }
                        .section-recap {
                            background: #2d3748;
                        }
                        .data-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-bottom: 20px;
                        }
                        .data-table th {
                            background: #e2e8f0;
                            padding: 10px;
                            text-align: left;
                            font-weight: bold;
                            border: 1px solid #cbd5e0;
                        }
                        .data-table td {
                            padding: 8px;
                            border: 1px solid #e2e8f0;
                        }
                        .data-table tr:nth-child(even) {
                            background: #f7fafc;
                        }
                        .total-row {
                            background: #edf2f7 !important;
                            font-weight: bold;
                            font-size: 16px;
                        }
                        .amount {
                            text-align: right;
                            font-weight: bold;
                        }
                        .recap-box {
                            background: #f7fafc;
                            border: 2px solid #cbd5e0;
                            border-radius: 10px;
                            padding: 20px;
                            margin-top: 30px;
                        }
                        .recap-line {
                            display: flex;
                            justify-content: space-between;
                            padding: 8px 0;
                            font-size: 16px;
                        }
                        .recap-total {
                            border-top: 3px solid #4c51bf;
                            margin-top: 10px;
                            padding-top: 15px;
                            font-size: 20px;
                            font-weight: bold;
                            color: #4c51bf;
                        }
                        .footer-note {
                            text-align: center;
                            margin-top: 40px;
                            padding-top: 20px;
                            border-top: 1px solid #cbd5e0;
                            color: #718096;
                            font-size: 12px;
                        }
                    </style>

                    <!-- En-tÃªte de la facture -->
                    <div class="invoice-header">
                        <div class="invoice-title">ðŸ“„ FACTURE HEBDOMADAIRE</div>
                        <div class="client-info">
                            <strong>Client:</strong> <t t-esc="client.name"/>
                        </div>
                        <div class="client-info">
                            <strong>PÃ©riode:</strong> <t t-esc="week_data['week'].split('-W')[1]"/> (<t t-esc="week_data['week'].split('-W')[0]"/>)
                        </div>
                        <div class="client-info">
                            <strong>Date d'impression:</strong> <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                        </div>
                    </div>

                    <!-- Section Sorties -->
                    <t t-if="week_data['sorties']">
                        <div class="section-title section-sorties">
                             SORTIES DE LA SEMAINE
                        </div>
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Produit</th>
                                    <th>QuantitÃ©</th>
                                    <th>Poids (Kg)</th>
                                    <th>Tonnage</th>
                                    <th>Prix Unitaire</th>
                                    <th class="amount">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="week_data['sorties']" t-as="sortie">
                                    <tr>
                                        <td><t t-esc="sortie.date_exit"/></td>
                                        <td><t t-esc="sortie.product_id.name"/></td>
                                        <td><t t-esc="sortie.quantity"/></td>
                                        <td><t t-esc="sortie.weight"/></td>
                                        <td><t t-esc="sortie.tonnage_final or sortie.tonnage"/></td>
                                        <td><t t-esc="sortie.selling_price_final or sortie.selling_price"/> Dh</td>
                                        <td class="amount"><t t-esc="sortie.mt_vente_final or sortie.mt_vente"/> Dh</td>
                                    </tr>
                                </t>
                                <tr class="total-row">
                                    <td colspan="6" style="text-align: right;">TOTAL SORTIES:</td>
                                    <td class="amount"><t t-esc="'%.2f' % week_data['total_sorties']"/> Dh</td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <!-- Section Retours -->
                    <t t-if="week_data['retours']">
                        <div class="section-title section-retours">
                             RETOURS DE LA SEMAINE
                        </div>
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Produit</th>
                                    <th>QuantitÃ©</th>
                                    <th>Poids (Kg)</th>
                                    <th>Tonnage</th>
                                    <th>Prix Unitaire</th>
                                    <th class="amount">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="week_data['retours']" t-as="retour">
                                    <tr>
                                        <td><t t-esc="retour.date_entry"/></td>
                                        <td><t t-esc="retour.product_id.name"/></td>
                                        <td><t t-esc="retour.quantity"/></td>
                                        <td><t t-esc="retour.weight"/></td>
                                        <td><t t-esc="retour.tonnage"/></td>
                                        <td><t t-esc="retour.selling_price"/> Dh</td>
                                        <td class="amount"><t t-esc="'%.2f' % (retour.selling_price * retour.tonnage)"/> Dh</td>
                                    </tr>
                                </t>
                                <tr class="total-row">
                                    <td colspan="6" style="text-align: right;">TOTAL RETOURS:</td>
                                    <td class="amount"><t t-esc="'%.2f' % week_data['total_retours']"/> Dh</td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <!-- Section Avances -->
                    <t t-if="week_data['avances']">
                        <div class="section-title section-avances">
                             AVANCES DE LA SEMAINE
                        </div>
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Chauffeur</th>
                                    <th>Mode de paiement</th>
                                    <th>Commentaire</th>
                                    <th class="amount">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="week_data['avances']" t-as="avance">
                                    <tr>
                                        <td><t t-esc="avance.date_paid"/></td>
                                        <td><t t-esc="avance.driver_id.name if avance.driver_id else '-'"/></td>
                                        <td><t t-esc="dict(avance._fields['payment_mode'].selection).get(avance.payment_mode, '-')"/></td>
                                        <td><t t-esc="avance.comment or '-'"/></td>
                                        <td class="amount"><t t-esc="'%.2f' % avance.amount"/> Dh</td>
                                    </tr>
                                </t>
                                <tr class="total-row">
                                    <td colspan="4" style="text-align: right;">TOTAL AVANCES:</td>
                                    <td class="amount"><t t-esc="'%.2f' % week_data['total_avances']"/> Dh</td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <!-- RÃ©capitulatif -->
                    <div class="section-title section-recap">
                        ðŸ“Š RÃ‰CAPITULATIF FINANCIER
                    </div>
                    <div class="recap-box">
                        <div class="recap-line">
                            <span>Total Sorties:</span>
                            <span><t t-esc="'%.2f' % week_data['total_sorties']"/> Dh</span>
                        </div>
                        <div class="recap-line">
                            <span>Total Retours:</span>
                            <span>- <t t-esc="'%.2f' % week_data['total_retours']"/> Dh</span>
                        </div>
                        <div class="recap-line">
                            <span>Total Avances:</span>
                            <span>- <t t-esc="'%.2f' % week_data['total_avances']"/> Dh</span>
                        </div>
                        <div class="recap-line recap-total">
                            <span>COMPTE DE LA SEMAINE:</span>
                            <span><t t-esc="'%.2f' % week_data['compte_semaine']"/> Dh</span>
                        </div>
                        <div class="recap-line" style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #cbd5e0;">
                            <span>Compte Total Client:</span>
                            <span style="color: #4c51bf;"><t t-esc="'%.2f' % week_data['compte_total']"/> Dh</span>
                        </div>
                    </div>

                    <!-- Pied de page -->
                    <div class="footer-note">
                        Document gÃ©nÃ©rÃ© automatiquement - <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y Ã  %H:%M')"/>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>