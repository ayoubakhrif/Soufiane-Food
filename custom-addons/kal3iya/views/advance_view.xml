<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="advances_action" model="ir.actions.act_window">
        <field name="name">Avances du client</field>
        <field name="res_model">kal3iya.advance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="advances_menu"
        name="Avances"
        parent="data_menu"
        action="advances_action"
    />

    <record id="view_kal3iya_advance_tree" model="ir.ui.view">
        <field name="name">kal3iya.advance.tree</field>
        <field name="model">kal3iya.advance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="client_id"/>
                <field name="amount"/>
                <field name="date_paid"/>
                <field name="driver_id"/>
                <field name="payment_mode"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <record id="view_kal3iya_advance_form" model="ir.ui.view">
        <field name="name">kal3iya.advance.form</field>
        <field name="model">kal3iya.advance</field>
        <field name="arch" type="xml">
            <form string="Saisie d'une avance client">
                <sheet>

                    <!-- ðŸ§¾ Informations principales -->
                    <group>
                        <group>
                            <field name="client_id" options="{'no_create': True}"/>
                            <field name="driver_id"/>
                        </group>
                        <group>
                            <field name="amount" class="oe_inline"/>
                            <field name="date_paid"/>
                        </group>
                    </group>

                    <separator string="DÃ©tails de paiement"/>

                    <!-- ðŸ’³ Paiement -->
                    <group>
                        <group>
                            <field name="payment_mode"/>
                        </group>
                        <group>
                            <field name="comment" invisible="payment_mode != 'charge'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>