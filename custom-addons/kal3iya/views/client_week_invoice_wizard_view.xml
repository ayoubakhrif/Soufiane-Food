<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire du wizard -->
    <record id="view_client_week_invoice_wizard_form" model="ir.ui.view">
        <field name="name">client.week.invoice.wizard.form</field>
        <field name="model">client.week.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Imprimer Facture Hebdomadaire">
                <group>
                    <field name="client_id" invisible="1"/>
                    <field name="week" widget="selection"/>
                </group>
                <footer>
                    <button name="action_print_invoice" 
                            string="Imprimer" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Annuler" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le wizard -->
    <record id="action_open_week_invoice_wizard" model="ir.actions.act_window">
        <field name="name">SÃ©lectionner une semaine</field>
        <field name="res_model">client.week.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_client_week_invoice_wizard_form"/>
        <field name="context">{'default_client_id': active_id}</field>
    </record>
</odoo>