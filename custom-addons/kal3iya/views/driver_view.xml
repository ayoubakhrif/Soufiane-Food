<odoo>
    <record id="kal3iyadriver_action" model="ir.actions.act_window">
        <field name="name">Chauffeurs</field>
        <field name="res_model">kal3iya.driver</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem 
        id="driver_menu"
        name="Chauffeurs"
        parent="data_menu"
        action="kal3iyadriver_action"
    />
    <record id="driver_view_tree" model="ir.ui.view">
        <field name="name">driver tree</field>
        <field name="model">kal3iya.driver</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="total_advance"/>
            </tree>
        </field>
    </record>
    <record id="view_kal3iya_driver_form" model="ir.ui.view">
        <field name="name">kal3iya.driver.form</field>
        <field name="model">kal3iya.driver</field>
        <field name="arch" type="xml">
            <form string="Chauffeur">
                <sheet>

                    <!-- ðŸ§‘â€âœˆï¸ En-tÃªte chauffeur -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du chauffeur"/>
                        </h1>
                    </div>

                    <!-- ðŸ“ž Informations gÃ©nÃ©rales -->
                    <group>
                        <group>
                            <field name="phone"/>
                        </group>

                        <group>
                            <field name="total_advance"
                                readonly="1"
                                widget="monetary"
                                string="Total des avances"/>
                        </group>
                    </group>

                    <separator string="Gestion des avances"/>

                    <notebook>

                        <!-- ðŸ’µ Onglet Avances -->
                        <page string="Avances du chauffeur">

                            <!-- ðŸ”¢ RÃ©cap rapide -->
                            <group>
                                <field name="total_advance"
                                    readonly="1"
                                    widget="monetary"
                                    string="Total cumulÃ©"/>
                            </group>

                            <!-- ðŸ“‹ Liste des avances -->
                            <field name="advance_ids">
                                <tree editable="bottom">
                                    <field name="date_paid"/>
                                    <field name="amount"/>
                                    <field name="client_id"/>
                                    <field name="payment_mode"/>
                                </tree>

                                <!-- ðŸ“ Formulaire avance -->
                                <form string="Avance chauffeur">
                                    <group>
                                        <group>
                                            <field name="date_paid"/>
                                            <field name="amount"/>
                                        </group>
                                        <group>
                                            <field name="client_id"/>
                                            <field name="payment_mode"/>
                                        </group>
                                    </group>

                                    <separator string="DÃ©tails"/>

                                    <group>
                                        <field name="comment"/>
                                    </group>
                                </form>
                            </field>

                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
</odoo>