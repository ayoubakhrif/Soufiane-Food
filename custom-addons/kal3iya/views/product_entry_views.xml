<odoo>
    <menuitem 
        id="Kal3iya_root_menu"
        name="Kal3iya"
        web_icon="kal3iya,static/description/icon.svg"
        sequence="1"
        groups="kal3iya.group_kal3iya_user"
    />

    <record id="kal3iyaentry_action" model="ir.actions.act_window">
        <field name="name">Entrée</field>
        <field name="res_model">kal3iyaentry</field>
    </record>

    <menuitem 
        id="entree_menu"
        name="Entrée"
        parent="Kal3iya_root_menu"
        action="kal3iyaentry_action"
    />

    <record id="entree_view_tree" model="ir.ui.view">
        <field name="name">entree tree</field>
        <field name="model">kal3iyaentry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_entry"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage" optional="1"/>
                <field name="price"/>
                <field name="calibre" optional="1"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="client_id"/>
                <field name="mt_achat" optional="1"/>
                <field name="driver_id" optional="1"/>
                <field name="cellphone" optional="1"/>
                <field name="ville" optional="1"/>
                <field name="frigo" optional="1"/>
                <field name="charge_transport" optional="1"/>
                <field name="ste_id" optional="1"/>
                <field name="provider_id" optional="1"/>
                <field name="state_badge" widget="html" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="entree_view_form" model="ir.ui.view">
        <field name="name">entree form</field>
        <field name="model">kal3iyaentry</field>
        <field name="arch" type="xml">
            <form string="Entrée / Retour">
                <header>
                    <div class="oe_button_box" position="inside">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-sign-in" invisible="state != 'entree'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-success" style="font-size: 16px; font-weight: bold;">Entrée</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-undo" invisible="state != 'retour'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-danger" style="font-size: 16px; font-weight: bold;">Retour</span>
                            </div>
                        </button>
                    </div>
                    <field name="state" widget="statusbar" options="{'clickable': true}"/>
                </header>

                <sheet>

                    <!-- Bandeau titre / infos rapides -->
                    <div class="oe_title">
                        <h1>
                            <span>Entrée / Retour</span>
                        </h1>
                    </div>

                    <!-- Bloc: Liaison retour -->
                    <group string="Référence" col="2">
                        <group>
                            <field name="return_id"
                                invisible="state == 'entree'"
                                domain="[('client_id', '=', client_id)]"
                                placeholder="Sélectionner le retour lié..."/>
                        </group>
                        <group>
                            <field name="client_id" invisible="state == 'entree'" options="{'no_create_edit': True}"/>
                        </group>
                    </group>

                    <separator string="Détails produit &amp; quantités"/>

                    <!-- Bloc: Produit / Quantités -->
                    <group col="2" string="Produit">
                        <group>
                            <field name="product_id" options="{'no_create_edit': True}"/>
                            <field name="quantity"/>
                            <field name="weight"/>
                            <field name="tonnage"/>
                        </group>

                        <group>
                            <field name="price" invisible="state == 'retour'"/>
                            <field name="mt_achat" invisible="state == 'retour'"/>
                            <field name="selling_price" invisible="state == 'entree'"/>
                        </group>
                    </group>

                    <separator string="Informations logistiques"/>

                    <!-- Bloc: Logistique -->
                    <group col="2" string="Logistique">
                        <group>
                            <field name="date_entry"/>
                            <field name="driver_id" options="{'no_create_edit': True}"/>
                            <field name="cellphone" widget="phone"/>
                        </group>

                        <group>
                            <field name="ville"/>
                            <field name="frigo" invisible="ville == 'tanger'"/>
                            <field name="charge_transport"/>
                        </group>
                    </group>

                    <separator string="Traçabilité &amp; fournisseurs"/>

                    <!-- Bloc: Traçabilité -->
                    <group col="2" string="Traçabilité">
                        <group>
                            <field name="calibre"/>
                            <field name="dum"/>
                            <field name="lot"/>
                        </group>
                        <group>
                            <field name="ste_id" options="{'no_create_edit': True}"/>
                            <field name="provider_id" options="{'no_create_edit': True}"/>
                        </group>
                    </group>

                    <separator string="Image"/>

                    <!-- Bloc: Image -->
                    <group>
                        <field name="image_1920"
                            widget="image"
                            class="oe_avatar"
                            options="{'preview_image': 'image_1920'}"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="entree_view_search" model="ir.ui.view">
        <field name="name">entree search</field>
        <field name="model">kal3iyaentry</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="state"/>
            </search>
        </field>
    </record>

</odoo>
