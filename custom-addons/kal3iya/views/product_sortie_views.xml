<odoo>

    <record id="kal3iyasortie_action" model="ir.actions.act_window">
        <field name="name">Sortie</field>
        <field name="res_model">kal3iyasortie</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <record id="view_kal3iyasortie_pivot" model="ir.ui.view">
        <field name="name">kal3iyasortie.pivot</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Sorties">
                <field name="date_exit" interval="month" type="row"/>
                <field name="product_id" type="row"/>
                <field name="client_id" type="col"/>
                <field name="quantity" type="measure"/>
                <field name="mt_vente" type="measure"/>
                <field name="benif_perte" type="measure"/>
            </pivot>
        </field>
    </record>

    <menuitem 
        id="sortie_menu"
        name="Sortie"
        parent="Kal3iya_root_menu"
        action="kal3iyasortie_action"
    />

    <!-- Vue liste -->
    <record id="sortie_view_tree" model="ir.ui.view">
        <field name="name">sortie tree</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_exit"/>
                <field name="client_id"/>
                <field name="product_id"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="calibre"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="price"/>
                <field name="selling_price"/>
                <field name="mt_achat"/>
                <field name="mt_vente"/>
                <field name="diff"/>
                <field name="benif_perte" widget="html" readonly="1"/>
                <field name="charge_transport"/>
                <field name="driver_id" optional="1"/>
                <field name="cellphone" optional="1"/>
                <field name="ville" optional="1"/>
                <field name="frigo" optional="1"/>
                <field name="ste_id" optional="1"/>
                <field name="provider_id" optional="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="sortie_view_form" model="ir.ui.view">
        <field name="name">sortie form</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <form string="Sortie de stock">
                <sheet>

                    <!-- üìç Informations g√©n√©rales -->
                    <group>
                        <group>
                            <field name="ville" widget="radio"
                                options="{'horizontal': true}"/>
                            <field name="entry_id"
                                context="{'ville_filter': ville}"
                                options="{'no_create': True, 'no_quick_create': True}"/>
                            <field name="date_exit"/>
                        </group>

                        <group>
                            <field name="client_id"/>
                            <field name="driver_id"/>
                            <field name="cellphone"/>
                        </group>
                    </group>

                    <separator string="D√©tails de la sortie"/>

                    <!-- üßæ D√©tails de vente -->
                    <group>
                        <group>
                            <field name="quantity"/>
                            <field name="selling_price"/>
                            <field name="price"/>
                            <field name="charge_transport"/>
                            <field name="week"/>
                        </group>

                        <group>
                            <field name="mt_achat" readonly="1"/>
                            <field name="mt_vente" readonly="1"/>
                            <field name="diff" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Informations du stock (lecture seule)"/>

                    <!-- üì¶ Informations stock -->
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="calibre" readonly="1"/>
                            <field name="weight" readonly="1"/>
                            <field name="tonnage" readonly="1"/>
                            <field name="frigo" readonly="1"/>
                        </group>

                        <group>
                            <field name="provider_id" readonly="1"/>
                            <field name="lot" readonly="1"/>
                            <field name="dum" readonly="1"/>
                            <field name="ste_id" readonly="1"/>
                            <field name="mt_achat" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Documents"/>

                    <!-- üñºÔ∏è Image + Drive -->
                    <group>
                        <group>
                            <field name="image_1920"
                                widget="image"
                                class="oe_avatar"
                                options="{'preview_image': 'image_1920'}"
                                readonly="1"/>
                        </group>

                        <group>
                            <field name="drive_file_url"/>
                            <field name="drive_file_id" invisible="1"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <!-- Vue liste sp√©cifique pour la modification hebdomadaire -->
    <record id="view_kal3iya_sortie_week_update_tree" model="ir.ui.view">
        <field name="name">kal3iya.sortie.week.update.tree</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0">
                <field name="date_exit" readonly="1"/>
                <field name="client_id" readonly="1"/>
                <field name="product_id" readonly="1"/>
                <field name="quantity" readonly="1"/>
                <field name="weight" readonly="1"/>
                <field name="tonnage" readonly="1"/>
                <field name="selling_price" readonly="1"/>
                
                <field name="tonnage_final"/>
                <field name="selling_price_final"/>
                <field name="mt_vente_final"/>
                
                <field name="mt_vente" optional="hide"/>
                <field name="dum" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="action_kal3iya_week_update_list" model="ir.actions.act_window">
        <field name="name">Modification Hebdomadaire</field>
        <field name="res_model">kal3iyasortie</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_kal3iya_sortie_week_update_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune sortie trouv√©e pour cette semaine.
            </p>
        </field>
    </record>

    <record id="action_server_open_week_list" model="ir.actions.server">
        <field name="name">Ouvrir Modification Hebdomadaire</field>
        <field name="model_id" ref="model_kal3iyasortie"/>
        <field name="state">code</field>
        <field name="code">
action = env.ref('kal3iya.action_kal3iya_week_update_list').read()[0]
target_week = env.context.get('target_week')
target_client_id = env.context.get('target_client_id')
domain = [('client_id', '=', target_client_id)]
if target_week:
    domain.append(('week', '=', target_week))
action['domain'] = domain
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="sortie_view_search" model="ir.ui.view">
        <field name="name">sortie search</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="client_id"/>
                <field name="ville"/>
                <field name="frigo"/>
                <field name="date_exit"/>
                <field name="week"/>
            </search>
        </field>
    </record>
</odoo>
