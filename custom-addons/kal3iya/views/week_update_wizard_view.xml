<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_kal3iya_week_update_wizard_form" model="ir.ui.view">
        <field name="name">kal3iya.week.update.wizard.form</field>
        <field name="model">kal3iya.week.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Modification Hebdomadaire">
                <sheet>
                    <group>
                        <field name="week"/>
                    </group>
                    <notebook>
                        <page string="Commandes">
                            <field name="line_ids">
                                <tree editable="bottom" create="0" delete="0">
                                    <field name="sortie_id" invisible="1"/>
                                    <field name="client_id"/>
                                    <field name="product_id"/>
                                    <field name="tonnage_initial"/>
                                    <field name="price_initial"/>
                                    <field name="tonnage_final"/>
                                    <field name="price_final"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                <footer>
                    <button string="Enregistrer" type="object" name="action_save" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_kal3iya_week_update_wizard" model="ir.actions.act_window">
        <field name="name">Modifier la semaine</field>
        <field name="res_model">kal3iya.week.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
