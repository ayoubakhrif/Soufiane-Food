<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_logistique_article_tree" model="ir.ui.view">
        <field name="name">logistique.article.tree</field>
        <field name="model">logistique.article</field>
        <field name="arch" type="xml">
            <tree string="Articles">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_logistique_article_form" model="ir.ui.view">
        <field name="name">logistique.article.form</field>
        <field name="model">logistique.article</field>
        <field name="arch" type="xml">
            <form string="Article">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_logistique_article" model="ir.actions.act_window">
        <field name="name">Articles</field>
        <field name="res_model">logistique.article</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
