<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_logistique_entry_tree" model="ir.ui.view">
        <field name="name">logistique.entry.tree</field>
        <field name="model">logistique.entry</field>
        <field name="arch" type="xml">
            <tree string="Entrées Logistiques" decoration-info="status == 'in_progress'" decoration-success="status == 'closed'" create="false" delete="false">
                <field name="status" widget="badge" decoration-info="status == 'in_progress'" decoration-warning="status == 'get_out'" decoration-success="status == 'closed'"/>
                <field name="week"/>
                <field name="saisi_par"/>
                <field name="dossier_id"/>
                <field name="ste_id"/>
                <field name="supplier_id"/>
                <field name="invoice_number"/>
                <field name="article_id"/>
                <field name="details"/>
                <field name="incoterm"/>
                <field name="free_time"/>
                <field name="shipping_id"/>
                <field name="consolidator_id"/>
                <field name="eta"/>
                <field name="container_count"/>
                <field name="cheque_count"/>
                <field name="def_number"/>
                <field name="surestarie_amount" sum="Surestarie"/>
                <field name="thc_amount" sum="THC"/>
                <field name="magasinage_amount" sum="Magasinage"/>
                <field name="entry_date"/>
                <field name="exit_date"/>
            </tree>
        </field>
    </record>

    <record id="view_logistique_entry_form" model="ir.ui.view">
        <field name="name">logistique.entry.form</field>
        <field name="model">logistique.entry</field>
        <field name="arch" type="xml">
            <form string="Entrées logistique" create="false" delete="false">
                <header>
                    <div class="oe_button_box" position="inside">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-hourglass-half" invisible="status != 'in_progress'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-warning" style="font-size: 16px; font-weight: bold;">En cours</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-truck" invisible="status != 'get_out'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-success" style="font-size: 16px; font-weight: bold;">Get Out</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="status != 'closed'">
                            <div class="o_stat_info">
                                <span class="o_stat_text text-danger" style="font-size: 16px; font-weight: bold;">Clot uré</span>
                            </div>
                        </button>
                    </div>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group string="Dossier / BL">
                            <field name="dossier_id" options="{'no_create': True}" readonly="1"/> <!-- Readonly for Logistics -->
                            <field name="bl_number" readonly="1"/> <!-- Readonly for Logistics -->
                        </group>
                        <group string="Suivi Finance (Lecture seule)">
                            <field name="prov_number" readonly="1"/>
                            <field name="def_number" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Dates et Références">

                            <field name="eta" readonly="1"/>

                            <field name="invoice_number" readonly="1"/>
                            <field name="saisi_par" readonly="1"/> <!-- Likely readonly too -->
                        </group>
                        <group string="Entités">
                            <field name="ste_id" readonly="1"/>
                            <field name="supplier_id" readonly="1"/>
                            <field name="shipping_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Logistics">
                            <field name="article_id" readonly="1"/>
                            <field name="details" readonly="1"/>
                            <field name="weight" readonly="1"/>
                        </group>
                        <group string="Tracking">
                            <field name="incoterm" readonly="1"/>
                            <field name="free_time" readonly="1"/>
                            <field name="doc_status" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Infos logistiques">
                            <field name="week"/>
                            <field name="consolidator_id" invisible="incoterm != 'fob'"/>
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="remarks"/>
                        </group>
                        <group string="Frais logistiques (depuis chèques)">
                            <field name="surestarie_amount" readonly="1"/>
                            <field name="thc_amount" readonly="1"/>
                            <field name="magasinage_amount" readonly="1"/>
                        </group>
                    </group>

                    
                    <notebook>
                        <page string="Conteneurs (Lecture seule)" name="containers">
                            <field name="container_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Chèques" name="cheques">
                            <field name="cheque_ids">
                                <tree>
                                    <field name="cheque_serie"/>
                                    <field name="date"/>
                                    <field name="beneficiary_id"/>
                                    <field name="type"/>
                                    <field name="amount"/>
                                    <field name="ste_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_logistique_entry_search" model="ir.ui.view">
        <field name="name">logistique.entry.search</field>
        <field name="model">logistique.entry</field>
        <field name="arch" type="xml">
            <search string="Recherche Entrées Logistiques">

                <field name="supplier_id"/>

                <field name="dossier_id"/>
                <field name="status"/>
                <field name="article_id"/>

                <group string="Regrouper par">
                    <filter name="group_supplier"
                            string="Supplier"
                            context="{'group_by': 'supplier_id'}"/>



                    <filter name="group_status"
                            string="Status"
                            context="{'group_by': 'status'}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="action_logistique_entry" model="ir.actions.act_window">
        <field name="name">Entrées Logistiques</field>
        <field name="res_model">logistique.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_logistique_entry_search"/>
        <field name="domain">[('purchase_state', 'in', ('draft', 'confirmed'))]</field>
    </record>
</odoo>
