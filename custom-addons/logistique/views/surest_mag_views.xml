<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Configuration Tree View -->
    <record id="view_surest_mag_config_tree" model="ir.ui.view">
        <field name="name">logistique.surest_mag.config.tree</field>
        <field name="model">logistique.surest_mag.config</field>
        <field name="arch" type="xml">
            <tree string="Configuration Tarifs">
                <field name="shipping_id"/>
                <field name="container_type"/>
                <field name="container_size"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Configuration Form View -->
    <record id="view_surest_mag_config_form" model="ir.ui.view">
        <field name="name">logistique.surest_mag.config.form</field>
        <field name="model">logistique.surest_mag.config</field>
        <field name="arch" type="xml">
            <form string="Configuration Tariff">
                <sheet>
                    <div class="oe_title">
                        <label for="shipping_id" class="oe_edit_only"/>
                        <h1><field name="shipping_id" placeholder="Shipping Company"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="container_type"/>
                            <field name="container_size"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Phases Tarifaires">
                            <field name="phase_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="days"/>
                                    <field name="surestarie_rate"/>
                                    <field name="magasinage_rate"/>
                                    <field name="is_beyond"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Simulation Tree View -->
    <record id="view_surest_mag_simulation_tree" model="ir.ui.view">
        <field name="name">logistique.surest_mag.simulation.tree</field>
        <field name="model">logistique.surest_mag.simulation</field>
        <field name="arch" type="xml">
            <tree string="Simulations">
                <field name="create_date"/>
                <field name="shipping_id"/>
                <field name="container_type"/>
                <field name="container_size"/>
                <field name="days_magasinage"/>
                <field name="days_surestarie"/>
                <field name="grand_total_ttc" sum="Grand Total TTC"/>
            </tree>
        </field>
    </record>

    <!-- Simulation Form View -->
    <record id="view_surest_mag_simulation_form" model="ir.ui.view">
        <field name="name">logistique.surest_mag.simulation.form</field>
        <field name="model">logistique.surest_mag.simulation</field>
        <field name="arch" type="xml">
            <form string="Simulation">
                <header>
                    <button name="action_simulate" string="Calculer" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group string="Paramètres">
                            <field name="shipping_id"/>
                            <field name="container_type"/>
                            <field name="container_size"/>
                            <field name="container_count"/>
                            <field name="free_surestarie_days"/>
                        </group>
                        <group string="Dates">
                            <field name="entry_date"/>
                            <field name="exit_date"/>
                            <field name="returning_date"/>
                            <separator string="Résultat Jours"/>
                            <field name="days_magasinage" readonly="1"/>
                            <field name="days_surestarie" readonly="1"/>
                        </group>
                    </group>
                    <group string="Détails Financiers" class="oe_subtotal_footer oe_right">
                        <!-- Surestarie Section -->
                        <field name="total_surestarie_ht" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_surestarie_vat" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_surestarie_ttc" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        
                        <!-- Magasinage Section -->
                        <field name="total_magasinage_ht" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_magasinage_vat" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_magasinage_ttc" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        
                        <!-- Grand Total -->
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="grand_total_ttc" string="Total Général TTC"/>
                        </div>
                        <field name="grand_total_ttc" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <notebook>
                        <page string="Détails (Breakdown)">
                            <field name="line_ids" readonly="1">
                                <tree>
                                    <field name="phase_name"/>
                                    <field name="days_magasinage" string="J. Mag"/>
                                    <field name="days_surestarie_billed" string="J. Sur"/>
                                    <field name="surestarie_rate"/>
                                    <field name="magasinage_rate"/>
                                    <field name="surestarie_subtotal" sum="Total Sur."/>
                                    <field name="magasinage_subtotal" sum="Total Mag."/>
                                </tree>
                            </field>
                            <group>
                                <field name="config_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
