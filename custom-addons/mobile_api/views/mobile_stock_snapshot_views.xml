<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mobile_stock_snapshot_tree" model="ir.ui.view">
        <field name="name">mobile.stock.snapshot.tree</field>
        <field name="model">mobile.stock.snapshot</field>
        <field name="arch" type="xml">
            <tree string="Stock Snapshot Mobile" create="0" delete="0" edit="0">
                <field name="product_id"/>
                <field name="lot"/>
                <field name="dum"/>
                <field name="garage"/>
                <field name="quantity_available"/>
                <field name="entry_date"/>
                <field name="weight"/>
                <field name="calibre"/>
            </tree>
        </field>
    </record>

    <record id="action_mobile_stock_snapshot" model="ir.actions.act_window">
        <field name="name">Stock Snapshot Mobile</field>
        <field name="res_model">mobile.stock.snapshot</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No stock snapshot data available.
            </p>
        </field>
    </record>

    <menuitem id="menu_mobile_stock_snapshot"
              name="Mobile Stock Snapshot"
              parent="stock_kal3iya.menu_stock_kal3iya_root"
              action="action_mobile_stock_snapshot"
              sequence="100"/>
</odoo>
