<odoo>
    <!-- Search View -->
    <record id="view_school_student_search" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="registration_number"/>
                <field name="parent_id"/>
                <field name="current_class_id"/>
                
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Suspended" name="suspended" domain="[('status', '=', 'suspended')]"/>
                <filter string="Withdrawn" name="withdrawn" domain="[('status', '=', 'withdrawn')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Class" name="group_class" context="{'group_by': 'current_class_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_school_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree decoration-muted="status == 'withdrawn'" decoration-danger="status == 'suspended'">
                <field name="registration_number"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="gender"/>
                <field name="date_of_birth"/>
                <field name="current_class_id"/>
                <field name="parent_id"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-danger="status == 'suspended'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="first_name" placeholder="First Name"/>
                            <field name="last_name" placeholder="Last Name"/>
                        </h1>
                        <h3>
                            <field name="registration_number"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="current_class_id"/>
                            <field name="academic_year"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information">
                            <group>
                                <!-- Address is managed via Parent -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first student
            </p>
        </field>
    </record>

    <menuitem id="menu_school_student" name="Students" parent="menu_school_student_root" action="action_school_student" sequence="10"/>
</odoo>
