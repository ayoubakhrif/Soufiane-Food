<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_stock_kal3iya_category" model="ir.module.category">
        <field name="name">Stock Kal3iya</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_stock_kal3iya_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_stock_kal3iya_category"/>
        <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_administrator" model="res.groups">
        <field name="name">Administrateur</field>
        <field name="category_id" ref="module_stock_kal3iya_category"/>
        <field name="implied_ids" eval="[(4, ref('group_manager'))]"/>
    </record>
</odoo>



