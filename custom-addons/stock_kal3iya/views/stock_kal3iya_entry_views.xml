<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_kal3iya_entry_tree" model="ir.ui.view">
        <field name="name">stock.kal3iya.entry.tree</field>
        <field name="model">stock.kal3iya.entry</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'">
                <field name="date"/>
                <field name="name"/>
                <field name="company_article_id"/>
                <field name="product_id"/>
                <field name="ste_id"/>
                <field name="qty"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="price_purchase"/>
                <field name="driver_id"/>
                <field name="garage"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_stock_kal3iya_entry_form" model="ir.ui.view">
        <field name="name">stock.kal3iya.entry.form</field>
        <field name="model">stock.kal3iya.entry</field>
        <field name="arch" type="xml">
            <form string="Entrée Stock Kal3iya">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Annuler (Reversal)" type="object" class="btn-danger" invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                </header>
                <sheet>
                    <div class="alert alert-info border-0 mb-4" role="alert" invisible="state != 'done'">
                        <i class="fa fa-info-circle me-2"/>
                        <strong>Attention:</strong> Les opérations confirmées ne peuvent pas être modifiées. Pour corriger une erreur, utilisez le bouton <strong>Annuler (Reversal)</strong> et créez une nouvelle opération.
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <separator string="Produit &amp; Quantités"/>
                    <group>
                        <group>
                            <field name="product_id" options="{'no_create_edit': True}"/>
                            <field name="qty"/>
                            <field name="weight"/>
                            <field name="tonnage"/>
                        </group>
                        <group>
                            <field name="price_purchase"/>
                            <field name="date"/>
                        </group>
                    </group>

                    <separator string="Logistique &amp; Traçabilité"/>
                    <group>
                        <group>
                            <field name="garage"/>
                            <field name="ste_id" options="{'no_create_edit': True}"/>
                            <field name="lot"/>
                            <field name="dum"/>
                            <field name="scan_dum" widget="url" placeholder="https://..."/>
                        </group>
                        <group>
                            <field name="calibre"/>
                            <field name="provider_id" options="{'no_create_edit': True}"/>
                            <field name="driver_id" options="{'no_create_edit': True}"/>
                        </group>
                    </group>

                    <separator string="Image"/>
                    <group>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_1920'}"/>
                    </group>
                </sheet>
                <div class="oe_chatter" groups="stock_kal3iya.group_manager">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_stock_kal3iya_entry" model="ir.actions.act_window">
        <field name="name">Entrées Stock Kal3iya</field>
        <field name="res_model">stock.kal3iya.entry</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>



