<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_kal3iya_return_tree" model="ir.ui.view">
        <field name="name">stock.kal3iya.return.tree</field>
        <field name="model">stock.kal3iya.return</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'">
                <field name="date"/>
                <field name="name"/>
                <field name="exit_id"/>
                <field name="product_id"/>
                <field name="soufiane_client"/>
                <field name="client_id"/>
                <field name="qty"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="garage"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_stock_kal3iya_return_form" model="ir.ui.view">
        <field name="name">stock.kal3iya.return.form</field>
        <field name="model">stock.kal3iya.return</field>
        <field name="arch" type="xml">
            <form string="Retour Stock Kal3iya">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Annuler" type="object" class="btn-danger" invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="exit_id"/>
                            <field name="date"/>
                            <field name="qty"/>
                            <field name="weight"/>
                            <field name="tonnage"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="soufiane_client"/>
                            <field name="client_id"/>
                            <field name="driver_id"/>
                        </group>
                    </group>
                    <group string="TraÃ§abilitÃ©">
                        <group>
                            <field name="lot"/>
                            <field name="dum"/>
                            <field name="garage"/>
                            <field name="calibre"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter" groups="stock_kal3iya.group_manager">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_stock_kal3iya_return" model="ir.actions.act_window">
        <field name="name">Retours Clients</field>
        <field name="res_model">stock.kal3iya.return</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_stock_kal3iya_return"
        name="Retours Clients"
        parent="menu_stock_kal3iya_root"
        action="action_stock_kal3iya_return"
        sequence="25"
    />
</odoo>



