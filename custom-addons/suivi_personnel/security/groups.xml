<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_suivi_personnel_category" model="ir.module.category">
        <field name="name">Suivi Personnel</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_suivi_user" model="res.groups">
        <field name="name">Utilisateur</field>
        <field name="category_id" ref="module_suivi_personnel_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_suivi_manager" model="res.groups">
        <field name="name">Gestionnaire</field>
        <field name="category_id" ref="module_suivi_personnel_category"/>
        <field name="implied_ids" eval="[(4, ref('group_suivi_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
