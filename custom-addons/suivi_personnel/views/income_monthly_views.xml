<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================= -->
    <!-- ðŸ“‹ Form View -->
    <!-- ========================= -->
    <record id="view_income_monthly_form" model="ir.ui.view">
        <field name="name">suivi.income.monthly.form</field>
        <field name="model">suivi.income.monthly</field>
        <field name="arch" type="xml">
            <form string="Revenu Mensuel">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="category"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description optionnelle..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!-- ðŸŒ³ Tree View (Editable) -->
    <!-- ========================= -->
    <record id="view_income_monthly_tree" model="ir.ui.view">
        <field name="name">suivi.income.monthly.tree</field>
        <field name="model">suivi.income.monthly</field>
        <field name="arch" type="xml">
            <tree string="Revenus Mensuels" editable="bottom">
                <field name="name"/>
                <field name="amount" sum="Total"/>
                <field name="category"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- ========================= -->
    <!-- ðŸš€ Action -->
    <!-- ========================= -->
    <record id="action_income_monthly" model="ir.actions.act_window">
        <field name="name">Revenus Mensuels</field>
        <field name="res_model">suivi.income.monthly</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
