<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_suivi_salary_advance_tree" model="ir.ui.view">
        <field name="name">suivi.salary.advance.tree</field>
        <field name="model">suivi.salary.advance</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'confirmed'">
                <field name="date"/>
                <field name="employee_id"/>
                <field name="amount" sum="Total Avances"/>
                <field name="month" optional="show"/>
                <field name="year" optional="hide"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'"/>
            </tree>
        </field>
    </record>

    <record id="view_suivi_salary_advance_form" model="ir.ui.view">
        <field name="name">suivi.salary.advance.form</field>
        <field name="model">suivi.salary.advance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <!-- Reset to Draft restricted to Admin (suivi_presence.group_suivi_admin) -->
                    <button name="action_draft" string="Remettre en brouillon" type="object" groups="suivi_presence.group_suivi_admin" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="amount"/>
                            <field name="reason"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="month"/>
                            <field name="year"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_suivi_salary_advance" model="ir.actions.act_window">
        <field name="name">Avances sur Salaire</field>
        <field name="res_model">suivi.salary.advance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_suivi_salary_advance"
              name="Avances"
              parent="suivi_presence.menu_suivi_presence_root"
              action="action_suivi_salary_advance"
              sequence="25"
              groups="suivi_presence.group_suivi_manager"/>

</odoo>
