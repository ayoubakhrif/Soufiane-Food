<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_suivi_leave_tree" model="ir.ui.view">
        <field name="name">suivi.leave.tree</field>
        <field name="model">suivi.leave</field>
        <field name="arch" type="xml">
            <tree string="Congés" decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'refused'">
                <field name="employee_id"/>
                <field name="leave_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="days_count"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'refused'"/>
            </tree>
        </field>
    </record>

    <record id="view_suivi_leave_form" model="ir.ui.view">
        <field name="name">suivi.leave.form</field>
        <field name="model">suivi.leave</field>
        <field name="arch" type="xml">
            <form string="Demande de Congé">
                <header>
                    <button name="action_approve" string="Approuver" type="object" class="oe_highlight" invisible="state != 'draft'" groups="suivi_presence.group_suivi_manager"/>
                    <button name="action_refuse" string="Refuser" type="object" invisible="state != 'draft'" groups="suivi_presence.group_suivi_manager"/>
                    <button name="action_draft" string="Remettre en Brouillon" type="object" invisible="state == 'draft'" groups="suivi_presence.group_suivi_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="leave_type"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="days_count"/>
                        </group>
                    </group>
                    <field name="reason" placeholder="Motif ou remarques..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_suivi_leave" model="ir.actions.act_window">
        <field name="name">Congés</field>
        <field name="res_model">suivi.leave</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
