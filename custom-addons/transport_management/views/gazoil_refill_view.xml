<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_gasoil_refill_form" model="ir.ui.view">
        <field name="name">gasoil.refill.form</field>
        <field name="model">gasoil.refill</field>
        <field name="arch" type="xml">
            <form string="Remplissage Gazoil">
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="date"/>
                        </h1>
                    </div>

                    <group string="Achat Gazoil">
                        <group>
                            <field name="liters"/>
                            <field name="purchase_price"/>
                        </group>
                        <group>
                            <field name="total_cost" readonly="1"/>
                        </group>
                    </group>

                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_gasoil_refill_tree" model="ir.ui.view">
        <field name="name">gasoil.refill.tree</field>
        <field name="model">gasoil.refill</field>
        <field name="arch" type="xml">
            <tree string="Remplissages Gazoil">
                <field name="date"/>
                <field name="liters" sum="Total Litres"/>
                <field name="purchase_price"/>
                <field name="total_cost" sum="CoÃ»t Total"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gasoil_refill" model="ir.actions.act_window">
        <field name="name">Remplissages Gazoil</field>
        <field name="res_model">gasoil.refill</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
