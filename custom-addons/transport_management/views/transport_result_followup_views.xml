<odoo>
    <record id="view_transport_result_followup_tree" model="ir.ui.view">
        <field name="name">transport.result.followup.tree</field>
        <field name="model">transport.result.followup</field>
        <field name="arch" type="xml">
            <tree string="Suivi des Résultats">
                <field name="name"/>
                <field name="date"/>
                <field name="total_profit"/>
                <field name="distributed_amount"/>
                <field name="remaining_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_transport_result_followup_form" model="ir.ui.view">
        <field name="name">transport.result.followup.form</field>
        <field name="model">transport.result.followup</field>
        <field name="arch" type="xml">
            <form string="Suivi des Résultats">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <div class="o_horizontal_separator text-uppercase fw-bold small">Synthèse</div>
                            <field name="total_profit" readonly="1" decoration-bf="1"/>
                            <field name="distributed_amount" readonly="1" decoration-info="1"/>
                            <field name="remaining_amount" readonly="1" decoration-success="remaining_amount &gt; 0" decoration-danger="remaining_amount &lt; 0"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Transport" name="transport_lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="paid_to"/>
                                    <field name="type"/>
                                    <field name="comment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_transport_result_followup" model="ir.actions.act_window">
        <field name="name">Suivi des Résultats</field>
        <field name="res_model">transport.result.followup</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau suivi des résultats
            </p>
        </field>
    </record>

    <menuitem 
        id="menu_transport_result_followup"
        name="Suivi des Résultats"
        parent="menu_transport_root"
        action="action_transport_result_followup"
        sequence="50"/>
</odoo>
