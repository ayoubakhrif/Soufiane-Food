<!-- gestia_branding/views/gestia_webclient.xml -->
<odoo>
    <!-- 1. Titre générique des onglets : "Gestia" -->
    <template id="webclient_title" inherit_id="web.webclient_bootstrap">
        <xpath expr="//title" position="replace">
            <title>Gestia</title>
        </xpath>
    </template>

    <!-- 2. Titre de la page de login : "Gestia - Connexion" -->
    <template id="login_title" inherit_id="web.login_layout">
        <xpath expr="//title" position="replace">
            <title>Gestia - Connexion</title>
        </xpath>
    </template>

    <!-- 3. Logo sur la page de login -->
    <template id="login_logo" inherit_id="web.login_layout">
        <xpath expr="//img[contains(@class, 'o_login_logo')]" position="attributes">
            <attribute name="src">/gestia_branding/static/src/img/logo_gestia.png</attribute>
            <attribute name="alt">Gestia</attribute>
        </xpath>
    </template>
</odoo>
