<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- âš™ï¸ Actions pour boutons -->
    <record id="filtered_sortie_action" model="ir.actions.act_window">
        <field name="name">Sorties du client</field>
        <field name="res_model">kal3iyasortie</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('client_id', '=', active_id)]</field>
    </record>

    <record id="filtered_retour_action" model="ir.actions.act_window">
        <field name="name">Retours du client</field>
        <field name="res_model">kal3iyaentry</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('client_id', '=', active_id)]</field>
    </record>

    <!-- ðŸ§ Vue formulaire client -->
    <record id="view_kal3iya_client_form" model="ir.ui.view">
        <field name="name">kal3iya.client.form</field>
        <field name="model">kal3iya.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- ðŸ”¹ Bouton sorties -->
                        <button name="%(filtered_sortie_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-truck">
                            <field name="sortie_count" string="Sorties" widget="statinfo"/>
                        </button>

                        <!-- ðŸ”¹ Bouton retours -->
                        <button name="%(filtered_retour_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-undo">
                            <field name="retour_count" string="Retours" widget="statinfo"/>
                        </button>
                    </div>

                    <!-- ðŸ“ Mise en page en deux colonnes -->
                    <group col="2" style="min-height:600px;">
                        <!-- ðŸ§© Colonne gauche : infos du client -->
                        <group colspan="1" col="1" style="width:35%;">
                            <separator string="Informations du client" colspan="2"/>
                            <field name="name"/>
                        </group>

                        <!-- ðŸ“Š Colonne droite : historique -->
                        <group colspan="1" col="1" style="width:65%;">
                            <separator string="Historique du client" colspan="2"/>

                            <notebook>
                                <!-- ðŸ§¾ Commandes -->
                                <page string="Commandes">
                                    <field name="sortie_ids" readonly="1" nolabel="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="quantity"/>
                                            <field name="selling_price"/>
                                            <field name="date_exit"/>
                                            <field name="driver_id"/>
                                        </tree>
                                    </field>
                                </page>

                                <!-- ðŸ” Retours -->
                                <page string="Retours">
                                    <field name="retour_ids" readonly="1" nolabel="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="quantity"/>
                                            <field name="selling_price"/>
                                            <field name="date_entry"/>
                                            <field name="driver_id"/>
                                        </tree>
                                    </field>
                                </page>

                                <!-- ðŸ’° Avances -->
                                <page string="Avances">
                                    <field name="avances" nolabel="1"
                                           context="{'default_client_id': active_id}">
                                        <tree editable="bottom">
                                            <field name="date_paid"/>
                                            <field name="amount"/>
                                            <field name="driver_id"/>
                                            <field name="payment_mode"/>
                                            <field name="comment"/>
                                        </tree>
                                        <form string="Avance">
                                            <group>
                                                <field name="client_id" readonly="1"/>
                                                <field name="date_paid"/>
                                                <field name="amount"/>
                                                <field name="driver_id"/>
                                                <field name="payment_mode"/>
                                                <field name="comment" invisible="payment_mode != 'charge'"/>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ðŸŒ³ Vue liste des clients -->
    <record id="view_kal3iya_client_tree" model="ir.ui.view">
        <field name="name">kal3iya.client.tree</field>
        <field name="model">kal3iya.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sortie_count"/>
                <field name="retour_count"/>
            </tree>
        </field>
    </record>

    <!-- ðŸ§­ Menu principal -->
    <record id="kal3iya_client_action" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">kal3iya.client</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="client_menu"
              name="Clients"
              parent="data_menu"
              action="kal3iya_client_action"/>
</odoo>
