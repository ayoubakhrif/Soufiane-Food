<odoo>
    <record id="view_kal3iya_sortie_popup" model="ir.ui.view">
        <field name="name">kal3iyasortie.popup.form</field>
        <field name="model">kal3iyasortie</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Modifier les valeurs finales" edit="true">
                <header>
                    <button string="Sauvegarder et fermer"
                            type="object"
                            name="action_save_and_close"
                            class="oe_highlight"/>
                    <button string="Fermer" special="cancel" class="btn-secondary"/>
                </header>
                
                <sheet>
                    <group>
                        <h2>Produit : <field name="name" readonly="1" class="oe_inline"/></h2>
                    </group>

                    <group string="Valeurs initiales">
                        <field name="selling_price" readonly="1"/>
                        <field name="tonnage" readonly="1"/>
                    </group>

                    <group string="Valeurs finales (corrigées)">
                        <field name="selling_price_final"/>
                        <field name="tonnage_final"/>
                    </group>

                    <group string="Écarts">
                        <field name="price_gap" readonly="1"/>
                        <field name="tonnage_gap" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le popup -->
    <record id="action_kal3iya_sortie_popup" model="ir.actions.act_window">
        <field name="name">Modifier les valeurs finales</field>
        <field name="res_model">kal3iyasortie</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_kal3iya_sortie_popup"/>
        <field name="target">new</field>
    </record>
</odoo>