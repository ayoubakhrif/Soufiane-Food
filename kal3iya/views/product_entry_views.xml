<odoo>
    <menuitem 
        id="Kal3iya_root_menu"
        name="Kal3iya"
        web_icon="kal3iya,static/description/icon.svg"
        sequence="1"
        groups="9al3iya.group_kal3iya_user"
    />

    <record id="kal3iyaentry_action" model="ir.actions.act_window">
        <field name="name">Entrée</field>
        <field name="res_model">kal3iyaentry</field>
    </record>

    <menuitem 
        id="entree_menu"
        name="Entrée"
        parent="Kal3iya_root_menu"
        action="kal3iyaentry_action"
    />

    <record id="entree_view_tree" model="ir.ui.view">
        <field name="name">entree tree</field>
        <field name="model">kal3iyaentry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="price"/>
                <field name="total_price"/>
                <field name="date_entry"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="calibre" optional="1"/>
                <field name="driver_id"/>
                <field name="cellphone" optional="1"/>
                <field name="ville"/>
                <field name="frigo"/>
                <field name="charge_transport"/>
                <field name="ste_id" optional="1"/>
                <field name="provider_id" optional="1"/>
                <field name="client_id"/>
                <field name="state_badge" widget="html" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="entree_view_form" model="ir.ui.view">
        <field name="name">entree form</field>
        <field name="model">kal3iyaentry</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': true}"/>
                </header>
                <sheet>
                    <group>
                        <field name="return_id" invisible="state == 'entree'" domain="[('client_id', '=', client_id)]"/>
                    </group>
                    <group>
                        <field name="client_id" invisible="state == 'entree'"/>
                        <field name="name"/>
                        <field name="quantity"/>
                        <field name="weight"/>
                        <field name="tonnage"/>
                        <field name="price" invisible="state == 'retour'"/>
                        <field name="total_price" invisible="state == 'retour'"/>
                        <field name="date_entry"/>
                        <field name="driver_id"/>
                        <field name="cellphone"/>
                    </group>
                    <group>
                        <field name="ville"/>
                        <field name="frigo" invisible="ville == 'tanger'"/>
                        <field name="charge_transport"/>
                        <field name="calibre"/>
                        <field name="dum"/>
                        <field name="lot"/>
                        <field name="ste_id"/>
                        <field name="provider_id"/>
                        <field name="image_1920"/>
                        <field name="selling_price" invisible="state == 'entree'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="entree_view_search" model="ir.ui.view">
        <field name="name">entree search</field>
        <field name="model">kal3iyaentry</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="state"/>
            </search>
        </field>
    </record>

</odoo>
