<odoo>

    <record id="kal3iyasortie_action" model="ir.actions.act_window">
        <field name="name">Sortie</field>
        <field name="res_model">kal3iyasortie</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
        id="sortie_menu"
        name="Sortie"
        parent="Kal3iya_root_menu"
        action="kal3iyasortie_action"
    />

    <!-- Vue liste -->
    <record id="sortie_view_tree" model="ir.ui.view">
        <field name="name">sortie tree</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_exit"/>
                <field name="client_id"/>
                <field name="name"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="calibre"/>
                <field name="quantity"/>
                <field name="weight"/>
                <field name="tonnage"/>
                <field name="price"/>
                <field name="selling_price"/>
                <field name="mt_achat"/>
                <field name="mt_vente"/>
                <field name="diff"/>
                <field name="benif_perte" widget="html" readonly="1"/>
                <field name="charge_transport"/>
                <field name="driver_id" optional="1"/>
                <field name="cellphone" optional="1"/>
                <field name="ville" optional="1"/>
                <field name="frigo" optional="1"/>
                <field name="ste_id" optional="1"/>
                <field name="provider_id" optional="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="sortie_view_form" model="ir.ui.view">
        <field name="name">sortie form</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <form string="Sortie de stock">
                <sheet>
                    <group>
                        <field name="entry_id" required="1"/>
                        <field name="date_exit"/>
                        <field name="quantity"/>
                        <field name="selling_price"/>
                        <field name="client_id"/>
                        <field name="indirect"/>
                        <field name="client2" invisible="indirect == False"/>
                        <field name="driver_id"/>
                        <field name="cellphone"/>
                    </group>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="weight" readonly="1"/>
                        <field name="tonnage" readonly="1"/>
                        <field name="calibre" readonly="1"/>
                        <field name="ville" readonly="1"/>
                        <field name="frigo" readonly="1"/>
                        <field name="provider_id" readonly="1"/>
                        <field name="lot" readonly="1"/>
                        <field name="dum" readonly="1"/>
                        <field name="mt_achat" readonly="1"/>
                        <field name="mt_vente" readonly="1"/>
                        <field name="diff" readonly="1"/>
                        <field name="charge_transport"/>
                        <field name="ste_id" readonly="1"/>
                        <field name="image_1920" widget="image" class="oe_avatar"
                               options="{'preview_image': 'image_1920'}" readonly="1"/>
                        <field name="drive_file_url"/>
                        <field name="drive_file_id" invisible="1"/>
                        <field name="week"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="sortie_view_search" model="ir.ui.view">
        <field name="name">sortie search</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="dum"/>
                <field name="lot"/>
                <field name="client_id"/>
                <field name="ville"/>
                <field name="frigo"/>
            </search>
        </field>
    </record>

     <!-- Vue kanban pour clients -->
    <record id="view_sortie_kanban_by_week" model="ir.ui.view">
        <field name="name">kal3iyasortie.week.kanban</field>
        <field name="model">kal3iyasortie</field>
        <field name="arch" type="xml">
            <kanban default_group_by="week">
                <field name="week"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="selling_price"/>
                <field name="mt_vente"/>
                <field name="date_exit"/>
                <field name="driver_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><t t-esc="record.name.value"/></strong><br/>
                            Qt√©: <t t-esc="record.quantity.value"/><br/>
                            Prix: <t t-esc="record.selling_price.value"/><br/>
                            Mt: <t t-esc="record.mt_vente.value"/><br/>
                            Date: <t t-esc="record.date_exit.value"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
